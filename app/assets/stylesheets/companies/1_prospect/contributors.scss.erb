
.row.contributors-header {
  height: 150px;
  .dropdown {
    button, .dropdown-menu {
      width: 170px
    }
  }
}

#prospect-contributors-table, #curate-contributors-table {
  /**
   * hide sorting icon for contributors; doesn't presently work in light of row grouping
   */
  th[aria-label*="Contributor"] {
    pointer-events: none;
  }
  th[aria-label*="Contributor"]:after {
    content: "" !important;
  }

  tr.active {
    td.crowdsourcing-template .placeholder {
      color: #fff !important;
    }
  }

  td.crowdsourcing-template:not(.disabled) {
    cursor: pointer;
    position: relative;
    padding-right: 40px;
    i {
      position: absolute;
      right: 20px;
      top: 50%;
      transform: translate(0, -50%);
    }
  }

  td.crowdsourcing-template.editor-open {
    padding-right: 8px;
    .DTE_Form_Buttons {
      .btn {
        float: right;
      }
      .btn:first-of-type {
        margin-left: 8px;  // matches td padding
      }
    }
  }

  td.crowdsourcing-template {
    span.select2 {
      margin-bottom: 8px;
    }
    .btn-success {
      float: right;
    }
    .placeholder {
      color: #999;
    }
  }

  td.status {
    position: relative;
    i {
      position: absolute;
      display: none;
      right: 10px;
      top: 50%;
      transform: translate(0, -50%);
      color: #456f59;
    }
  }


}