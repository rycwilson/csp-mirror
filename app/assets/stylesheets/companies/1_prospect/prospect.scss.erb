#prospect {

  div[id*="table_wrapper"] {
    margin-top: 8px;
  }

}

.link-dialog {
  .modal-content {
    overflow: hidden;  // this forces .modal-header background to respect border-radius
    .modal-header, .modal-footer {
      background: #f5f5f5;
    }
  }
}



#new-success-modal, #new-contributor-modal {
  .modal-body {
    padding: 20px;
    label:not(.radio-inline) {
      padding-right: 5px;
    }
    .form-group {
      margin-bottom: 20px;
    }
    // mimic select2
    input, textarea {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      padding-left: 12px;
    }
    .create-referrer, .create-contributor {
      .col-sm-9 {
        position: relative;
      }
      i.fa-ellipsis-v {
        position: absolute;
        color: #ccc;
        top: -15px;
        left: 30px;
      }
    }
  }
}

.successes-header, .contributors-header {
  margin-bottom: 12px;
  > [class*="col-"]:first-child {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding-bottom: 2px;  // hack to account for checkbox height discrepancy
    .dropdown {
      margin: 0 45px;
    }
    label.checkbox-filter {
      margin-left: 17px;
    }
  }
  > [class*="col-"]:last-child {
    label.checkbox-filter {
      font-weight: normal;
      margin-bottom: 5px;
    }
  }
  .form-group {
    width: 100%;
  }
  .form-group.search > div {
    position: relative;
    i {
      position: absolute;
      color: #999;
      right: 30px;
      top: 10px;
      z-index: 100;
      cursor: pointer;
    }
  }
  select + span > span:first-child > span {
    padding-right: 30px; // matches search box
    text-align: left;
  }
  select + span.select2 {
    margin-bottom: 12px;
  }
  .select2-container {
    width: 100%;
  }
}
