
#promote-panel {

  .layout {
    > .col-md-9 {
      padding-top: 55px;
    }
  }

  .enable-promote-type {
    margin-top: 1px;  // line up with Sponsored Stories text-align: left;
    label {
      margin-right: 30px;
    }
    label.checkbox-inline {
      margin-right: 15px;
      margin-bottom: 4px;
    }
  }

  #adwords-image-select-modal {

    .thumbnail {
      height: 110px;
      width: 210px;
      cursor: pointer;
    }
    .thumbnail.selected {
      border-color: #337ab7;  // from bootstrap $brand-primary
    }
    .modal-body {
      background-color: #f2f2f2;
      max-height: 475px;
      overflow-y: scroll;
      li {
        margin: 15px 20px;
      }
    }
  }

  #sponsored-stories-tab-pane {

    td.sponsored-story-customer {
      vertical-align: middle;
    }

    // ref: https://github.com/vitalets/x-editable/issues/361
    td.sponsored-story-title {
      p {
        margin-bottom: 4px;
        line-height: 20px;
      }
      textarea {
        margin-bottom: 6px;
      }
      a { cursor: pointer; }
      .editable-container.editable-inline,
      .editable-container.editable-inline .control-group.form-group,
      .editable-container.editable-inline .control-group.form-group .editable-input,
      .editable-container.editable-inline .control-group.form-group .editable-input textarea,
      .editable-container.editable-inline .control-group.form-group .editable-input select,
      .editable-container.editable-inline .control-group.form-group .editable-input input:not([type=radio]):not([type=checkbox]):not([type=submit]) {
        width: 100% !important;
      }
      .editable-buttons {
        display: block;
        float: right;
        margin-top: 5px;
      }
    }

    // limit the Preview width
    tr > th:last-of-type, tr > td:last-of-type {
      max-width: 30px !important;
    }

    td.sponsored-story-image {
      text-align: center;
      vertical-align: middle;
      padding: 8px 14px;
      .fileinput {
        margin: 0;
        .thumbnail {
          height: 80px;
          width: 153px;
          cursor: pointer;
          margin: 0;
          // backup image
          // ref: http://stackoverflow.com/questions/980855
          img:before {
            content: ' ';
            display: block;
            position: absolute;
            height: 70px;
            width: 143px;
            background-image: url('<%= ADWORDS_IMAGE_PLACEHOLDER_URL %>');
            background-size: contain;
          }
        }
      }
    }

    .status-dropdown, .preview-window {
      text-align: center;
      vertical-align: middle;
      // ref: http://stackoverflow.com/questions/11078509/how-to-increase-the-clickable-area-of-a-a-tag-button
      > div > a, > a {
        display: inline-block;
        position: relative;
        z-index: 1;
        padding: 2em;
        margin: -2em;
        color: #666;
      }
      > a:hover {
        color: #222;
      }
      > div.open {
        > a.paused { color: #222; }
        > a.enabled { color: #456f59; }
      }
      > div > a.enabled {
        color: #4d8664;
      }
      > div > a.enabled:hover {
        color: #456f59;
        text-decoration: none;
      }
      > div > a.paused {
        color: #666;
      }
      > div > a.paused:hover {
        color: #222;
        text-decoration: none;
      }
      .dropdown-menu {
        a i {
          color: #666;
        }
        a.paused i {
          color: #222;
        }
        i.fa-play {
          color: #4d8664;;
        }
      }

    }

    .status-dropdown {
      a.dropdown-toggle:focus {
        color: #222;
        text-decoration: none
      }
      i:first-of-type {
        font-size: 18px;
      }
      i:last-of-type {
        font-size: 14px
      }
      .dropdown-menu {
        margin-top: 15px;
      }
    }
    .preview-window {
      font-size: 18px;
      i { padding-top: 2px; }
    }
  }

  #promote-settings-tab-pane {

    > div, form {
      padding-right: 25px;
    }

    // headline
    .form-inline {
      .help-block {
        margin-bottom: 0;
        ul { margin-bottom: 0; }
      }
    }

    .form-group {
      margin-bottom: 25px;  // bootstrap default, also covers div.form-inline (normally 0)
    }

    label[for="company_adwords_short_headline"] {
      margin-right: 10px;
    }

    label.adwords-logo, label.adwords-image {
      margin-bottom: 10px;
    }

    .fileinput, .fileinput-preview {
      margin: 0;
    }

    .fileinput.adwords-logo, .fileinput.adwords-image {
      position: relative;
      padding-top: 14px;
      padding-bottom: 0;
      div.image-requirements {
        margin-bottom: 10px;
      }
      .change-image {
        position: absolute;
        top: 5px;
        right: 10px;
        padding: 6px;
        font-size: 18px;
        color: #666;
        cursor: pointer;
      }
      .change-image:hover {
        color: #222;
      }
      .thumbnail {
        margin: 0;
      }
      .help-block {
        margin: 6px 0;
      }
    }

    .fileinput.adwords-logo {
      width: 180px;
      .thumbnail {
        height: 110px;
        width: 110px;
      }
    }

    .fileinput.adwords-image {
      width: 278px;
      .thumbnail {
        height: 110px;
        width: 210px;
      }
    }

    .new-adwords-image-icon {
      margin-right: 6px;
      color: #6685a4;
    }
    .new-adwords-image-icon:hover:not(.disabled) {
      color: #516c87;
      cursor: pointer;
    }

    li.adwords-image {
      position: relative;
      vertical-align: top;
      width: 250px;
      margin: 0 15px 20px 15px;
      padding-top: 42px;
      padding-bottom: 0;

      label.checkbox-inline {
        position: absolute;
        left: 19px;
        top: 14px;
        margin: 0;
      }
      .fileinput {
        margin-bottom: 5px;
      }
      .fileinput .thumbnail {
        height: 110px;
        width: 210px;
      }

      .to-be-removed {
        border-color: #cc2d2d;
      }

      .remove-image {
        position: absolute;
        top: 6px;
        right: 12px;
        padding: 6px;
        font-size: 18px;
        color: #666;
        cursor: pointer;
      }
      .remove-image:hover {
        color: #222;
      }
      .cancel-remove-image, .cancel-add-image {
        cursor: pointer;
      }
      .adwords-image-form-control-bottom {
        height: 18px;
        margin-bottom: 6px;
      }
    }

    li.adwords-image.to-be-removed {
      background-color: #f2dede;
      border-color: #ebccd1;
      .adwords-image-form-control-top {
        opacity: 0.5;
        pointer-events: none;
      }
      .adwords-image-form-control-bottom {
        color: #a94442
      }
    }

    li.adwords-image.to-be-added {
      background-color: #dff0d8;
      border-color: #d6e9c6;
      .adwords-image-form-control-top {
        .remove-image {
          display: none;
        }
      }
      .adwords-image-form-control-bottom {
        color: #3c763d;
      }
    }


  }

}