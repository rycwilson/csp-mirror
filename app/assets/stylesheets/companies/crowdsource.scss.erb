
#contribution-content-modal {
  textarea {
    width: 100%;
  }
}

#contribution-request-modal {
  .modal-content {
    overflow: hidden;  // this forces .modal-header background to respect border-radius
    .modal-header, .modal-footer {
      background: #f5f5f5;
    }
    .modal-title, .progress {
      margin-bottom: 10px;
    }
    .progress {
      margin-top: 5px;
    }
    .modal-body {
      max-height: 440px;
      overflow-y: auto;
      .form-group.subject {
        width: 100%;
        margin-bottom: 15px;
        label {
          width: 10%;
          // these three settings for vertical centering
          display: inline-block;
          vertical-align: middle;
          margin-bottom: 0;
        }
        input { width: 90%; }
      }
    }
  }
  .modal-content.send {
    .readonly { display: none }
  }
  .modal-content.readonly {
    .modal-body * {
      pointer-events: none;
    }
    .send, .note-toolbar {
      display: none
    }
    .note-editable[contenteditable="false"] {
      // mirrors disabled input
      background: #eee;
    }
  }
}

#successes-table, [id*="-contributors-table"] {

  th[class*='details'], td[class*='details'] {
    // padding necessary to override datatables css that adds padding-right: 30px to the th,
    // thus preventing text from centering horizontally
    padding: 8px;
    vertical-align: middle;
    text-align: center;
    cursor: pointer;
    color: #666
  }

  th.actions-dropdown {
    text-align: center;
    padding: 8px 12px;
  }
  td.actions-dropdown {
    text-align: center;
    vertical-align: middle;
    color: #666;
    // ref: http://stackoverflow.com/questions/11078509/how-to-increase-the-clickable-area-of-a-a-tag-button
    div > a {
      color: inherit;
      display: inline-block;
      position: relative;
      z-index: 1;
      padding: 10% 50%;
      margin: -2em;
      // color: #666;
    }
    i.action {
      color: #666;
      width: 17px;
    }
    i.action + span {
      color: #444;
    }
  }
  tr.active i:not(.action) {
    color: white;
    text-decoration: none;
  }
}

// applies to both crowdsource-contributors and curate-contributors tables
[id*="-contributors-table"] {
  td {
    vertical-align: middle !important;  // override bootstrap for case of inline editor expanding row height
  }
  // contributor details child row
  tr[data-contribution-id] + tr:not([data-contribution-id]):not(.group) {
    background-color: #f5f5f5;
    > td {
      padding: 20px 8px;
    }
  }
  td.contributor-name {
    // these were settings used for an edit icon that would appear when
    // child row was opened...
    // overflow: hidden;
    // > span {
    //   margin-left: -32px;
    //   i {
    //     padding: 0 10px 0 6px;
    //     // cursor: pointer;
    //   }
    // }
    // span.shown {
    //   margin-left: 0;
    // }
  }

  td.status {
    // this ensures newlines will be respected
    // ref: https://stackoverflow.com/questions/10937218
    white-space: pre;
  }

  td.actions-dropdown {
    .dropdown-menu-right {
      right: -10px;
    }
  }

  div.contributor-details {
    // horizontal form
    #contributor-form {
      > .row > div:last-child {
        padding-left: 0;
      }
      .form-group {
        width: 100%;
        margin-bottom: 15px;
        label {
          width: 22%;
          padding: 7px 0 0 0;
        }
        > div:last-child:not(.linkedin-checkbox-container) {  // inputs
          width: 78%;
        }
        .form-control {
          font-size: 13px;
        }
        input:not([type='checkbox']) {
          width: 100%;
        }
      }
      .linkedin-checkbox-container {
        width: 100%;
        label {
          width: 100%;
          padding-left: 36px;
        }
      }
      > .row:last-child {
        button[type=submit] {
          width: 98px;
        }
        > div:only-child {
          padding-right: 20px;
        }
      }

    }
  }
}

#new-success-modal, #new-contributor-modal {
  .modal-body {
    padding: 20px;
    label:not(.radio-inline) {
      padding-right: 5px;
    }
    .form-group {
      margin-bottom: 20px;
    }
    .form-group.referral {
      margin-bottom: 10px;
    }
    // mimic select2
    input, textarea {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      padding-left: 12px;
    }
  }
}

#successes-filter, #contributors-filter, .curator-select {
  width: 250px;
}

.row.successes-header, .row.contributors-header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  // select + span {
  //   margin-left: 0.5em;  // matches datatables
  // }
  select + span > span:first-child > span {
    padding-right: 30px; // matches search box
    text-align: left;
  }
}
.row.successes-header:nth-of-type(2), .row.contributors-header:nth-of-type(2) {
  margin-bottom: 5px;
}

