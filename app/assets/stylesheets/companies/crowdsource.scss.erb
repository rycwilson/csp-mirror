#crowdsource-panel {

  tr.group,
  tr.group:hover {
    background-color: #ddd;
  }

  .actions-dropdown {
    text-align: center;
    // max-width: 60px !important;
    padding: 8px;
  }
  tr:not(.active) {
  }
  th.actions-dropdown {
  }
  td.actions-dropdown {
    vertical-align: middle;
    color: #666;
    // ref: http://stackoverflow.com/questions/11078509/how-to-increase-the-clickable-area-of-a-a-tag-button
    div > a {
      color: inherit;
      display: inline-block;
      position: relative;
      z-index: 1;
      padding: 10% 50%;
      margin: -2em;
      // color: #666;
    }
    a.dropdown-toggle:focus {
      color: white;
      text-decoration: none;
    }
    .dropdown-menu {
      left: -50px;
    }
  }

  #customers-table {
    td {
      vertical-align: middle;
    }
    td.customer-logo {
      text-align: center;
      padding: 8px 14px;
      .fileinput {
        margin: 0;
        .thumbnail {
          height: 80px;
          width: 153px;
          cursor: pointer;
          margin: 0;
          display: flex;
          align-items: center;
          justify-content: center;
          // backup image
          // ref: http://stackoverflow.com/questions/980855
          img:before {
            content: ' ';
            display: block;
            position: absolute;
            height: 70px;
            width: 143px;
            background-image: url("<%= ADWORDS_LOGO_PLACEHOLDER_URL %>");
            background-size: contain;
          }
        }
      }
    }
  }

  #successes-table {
    th.success-details, td.success-details {
      // padding necessary to override datatables css that adds padding-right: 30px to the th,
      // thus preventing text from centering horizontally
      padding: 8px;
      vertical-align: middle;
      text-align: center;
      cursor: pointer;
    }
    tr[data-success-id] + tr:not([data-success-id]):not(.group) {
      background-color: #f5f5f5;
      > td {
        padding: 20px 8px;
      }
    }
  }

  #contributors-table {
    th.contributor-details, td.contributor-details {
      // padding necessary to override datatables css that adds padding-right: 30px to the th,
      // thus preventing text from centering horizontally
      padding: 8px;
      vertical-align: middle;
      text-align: center;
      cursor: pointer;
    }
    // contributor details child row
    tr[data-contribution-id] + tr:not([data-contribution-id]):not(.group) {
      background-color: #f5f5f5;
      > td {
        padding: 20px 8px;
      }
    }
    td.contributor-name {
      overflow: hidden;
      > span {
        margin-left: -32px;
        i {
          padding: 0 10px 0 6px;
          // cursor: pointer;
        }
      }
      span.shown {
        margin-left: 0;
      }
    }

    div.contributor-details {
      // horizontal form
      #contributor-form {
        > .row > div:last-child {
          padding-left: 0;
        }
        .form-group {
          width: 100%;
          margin-bottom: 15px;
          label {
            width: 22%;
            padding: 7px 0 0 0;
          }
          > div:last-child:not(.linkedin-checkbox-container) {  // inputs
            width: 78%;
          }
          .form-control {
            font-size: 13px;
          }
          input:not([type='checkbox']) {
            width: 100%;
          }
        }
        .linkedin-checkbox-container {
          width: 100%;
          label {
            width: 100%;
            padding-left: 36px;
          }
        }
        > .row:last-child {
          > div:only-child {
            padding-right: 20px;
          }
        }

      }
    }
  }

}