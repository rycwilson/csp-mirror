
/*
*= require ./successes
*= require ./contributors
*= require ./contributors_modals
*/


td {
  vertical-align: middle !important;  // override bootstrap for case of inline editor expanding row height
  i:not(.submit) { color: #666; }
}
td.status {
  // this ensures newlines will be respected
  // ref: https://stackoverflow.com/questions/10937218
  white-space: pre;
}

.link-dialog {
  .modal-content {
    overflow: hidden;  // this forces .modal-header background to respect border-radius
    .modal-header, .modal-footer {
      background: #f5f5f5;
    }
  }
}

.bootbox.modal.confirm-remove-contributor {
  .modal-content {
    background-color: #f2dede;
    border-color: #ebccd1;
    color: #a94442;
    overflow: hidden;  // so background color doesn't extend past border radius
  }
  .modal-footer {
    background-color: #fff;
  }
  .modal-body {
    font-size: 16px !important;
  }
}

#new-success-modal, #new-contributor-modal {
  .modal-body {
    padding: 20px;
    label:not(.radio-inline) {
      padding-right: 5px;
    }
    .form-group {
      margin-bottom: 20px;
    }
    .form-group.referral {
      margin-bottom: 10px;
    }
    // mimic select2
    input, textarea {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      padding-left: 12px;
    }
  }
}

.successes-header, .contributors-header {
  margin-bottom: 12px;
  > [class*="col-"]:first-child {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    padding-bottom: 2px;  // hack to account for checkbox height discrepancy
    button {
      width: 200px;
    }
    .dropdown {
      margin: 15px 45px;
    }
    label.checkbox-filter {
      margin-left: 17px;
    }
  }
  > [class*="col-"]:last-child {
    label.checkbox-filter {
      font-weight: normal;
      margin-bottom: 5px;
    }
  }
  .form-group {
    width: 100%;
  }
  select + span > span:first-child > span {
    padding-right: 30px; // matches search box
    text-align: left;
  }
  select + span.select2 {
    margin-bottom: 12px;
  }
  .select2-container {
    width: 100%;
  }
}

#prospect {

  div[id*="table_wrapper"] {
    margin-top: 8px;
  }

  tr.group,
  tr.group:hover {
    background-color: #ddd;
  }

  #successes-table {
    tr[data-success-id] + tr:not([data-success-id]):not(.group) {
      background-color: #f5f5f5;
      > td {
        padding: 20px 8px;
      }
    }
    td.actions-dropdown {
      > div {
        position: relative;
        .dropdown-menu {
          left: -120px;
        }
      }
    }
  }

}