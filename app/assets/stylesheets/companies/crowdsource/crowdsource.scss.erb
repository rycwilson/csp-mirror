.link-dialog {
  .modal-content {
    overflow: hidden;  // this forces .modal-header background to respect border-radius
    .modal-header, .modal-footer {
      background: #f5f5f5;
    }
  }
}

#contribution-content-modal {
  .modal-content {
    overflow: hidden;
    .modal-header, .modal-footer {
      background: #f5f5f5;
    }
    .modal-body {
      max-height: 440px;
      overflow-y: auto;
      hr {
        margin: 15px 0;
      }
      .contributor {
        p:first-of-type {
          font-weight: 600;
        }
        p {
          margin-bottom: 0;
        }
      }
    }
    textarea {
      width: 100%;
    }
  }
}

#contribution-request-modal {
  .modal-content {
    overflow: hidden;  // this forces .modal-header background to respect border-radius
    .modal-header, .modal-footer {
      background: #f5f5f5;
    }
    .modal-title, .progress {
      margin-bottom: 10px;
    }
    .progress {
      margin-top: 5px;
    }
    .modal-body {
      max-height: 440px;
      overflow-y: auto;
      .form-group.subject {
        width: 100%;
        margin-bottom: 15px;
        label {
          width: 10%;
          // these three settings for vertical centering
          display: inline-block;
          vertical-align: middle;
          margin-bottom: 0;
        }
        input { width: 90%; }
      }
    }
  }
  .modal-content.send {
    .readonly { display: none }
  }
  .modal-content.readonly {
    .modal-body * {
      pointer-events: none;
    }
    .send, .note-toolbar {
      display: none
    }
    .note-editable[contenteditable="false"] {
      // mirrors disabled input
      background: #eee;
    }
  }
}

.link-

.bootbox.modal.confirm-remove-contributor {
  .modal-content {
    background-color: #f2dede;
    border-color: #ebccd1;
    color: #a94442;
    overflow: hidden;  // so background color doesn't extend past border radius
  }
  .modal-footer {
    background-color: #fff;
  }
  .modal-body {
    font-size: 16px !important;
  }
}

#new-success-modal, #new-contributor-modal {
  .modal-body {
    padding: 20px;
    label:not(.radio-inline) {
      padding-right: 5px;
    }
    .form-group {
      margin-bottom: 20px;
    }
    .form-group.referral {
      margin-bottom: 10px;
    }
    // mimic select2
    input, textarea {
      font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
      padding-left: 12px;
    }
  }
}

#successes-filter, #contributors-filter, .curator-select {
  width: 250px;
}

.row.successes-header, .row.contributors-header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
  // select + span {
  //   margin-left: 0.5em;  // matches datatables
  // }
  select + span > span:first-child > span {
    padding-right: 30px; // matches search box
    text-align: left;
  }
}
.row.successes-header:nth-of-type(2), .row.contributors-header:nth-of-type(2) {
  margin-bottom: 16px;
}

#crowdsource {

  div[id*="table_wrapper"] {
    margin-top: 8px;
  }

  tr.group,
  tr.group:hover {
    background-color: #ddd;
  }

  #successes-table {
    tr[data-success-id] + tr:not([data-success-id]):not(.group) {
      background-color: #f5f5f5;
      > td {
        padding: 20px 8px;
      }
    }
    td.actions-dropdown {
      > div {
        position: relative;
        .dropdown-menu {
          left: -120px;
        }
      }
    }
  }

}