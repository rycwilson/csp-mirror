
#ads-images-modal {
  .modal-title {
    margin-bottom: 5px;
  }
  .story-title {
    margin-bottom: 0;
    color: #888;
  }
  .modal-body {
    background-color: #fff;
    min-height: 400px;
    // overflow-y: scroll;
    padding: 20px 15px 15px 15px;
  }
  .gads-image--square {
    height: 85px;
  }
  .gads-image--landscape {
    height: 85px;
  }
  .gads-logo--square {
    height: 85px;
  }
  .gads-logo--landscape {
    height: 80px;
  }
  img {
    max-height: 100%;
    cursor: pointer;
    // border: 1px solid #ddd;
    box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.16), 0 0 0 1px rgba(0, 0, 0, 0.08)
  }
  li {
    position: relative;
    padding: 5px;
    margin: 10px;
    .check {
      display: none;
      position: absolute;
      bottom: -10px;
      right: -10px;
      align-items: center;
      color: #5E9ED6;
      font-size: 12px;
      padding: 4px;
      > div {
        position: relative;
        > div {
          position: absolute;
          top: 2px;
          left: 4px;
          height: 24px;
          width: 24px;
          background: #fff;
          border-radius: 14px;
        }
      }
      i {
        -webkit-text-stroke: 1px #fff;  // should match background color
      }
    }
    &.selected {
      .check {
        display: flex;
      }
    }
  }
}

#promoted-stories-table {
  td.promoted-story-images {
    text-align: center;
    vertical-align: middle;
    padding: 8px 14px;
    height: 97px;  // so it doesn't collapse when showing flash success
    .fileinput {
      margin: 0;
      .thumbnail {
        height: 80px;
        width: 153px;
        cursor: pointer;
        margin: 0;
        // backup image
        // ref: http://stackoverflow.com/questions/980855
        img:before {
          content: ' ';
          display: block;
          position: absolute;
          height: 70px;
          width: 143px;
          background-image: url('<%= RESPONSIVE_AD_LANDSCAPE_IMAGE_PLACEHOLDER %>');
          background-size: contain;
        }
      }
    }
  }
  td.promoted-story-title {
    cursor: pointer;
    textarea {
      width: 100%;
      margin-bottom: 4px;
    }
    .DTE_Form_Buttons {
      .help-block {
        display: inline-block;
        margin-top: 0;
        text-decoration: none;
      }
      .btn {
        float: right;
      }
      .btn:first-of-type {
        margin-left: 8px;  // matches td padding
      }
      .btn-success {
        width: 59px;
      }
    }
    &:hover {
      text-decoration: underline;
    }
    &.save-disabled {
      .DTE_Form_Buttons .btn-success {
        outline: none;
        &:active {
          background-color: #4d8664;  // disallow color change on click
        }
      }
    }

  }


  td.status {
    padding: 8px;
    form.ads-status {
      cursor: pointer;
      margin-bottom: -4px;
      &[data-submitted="true"] {
        pointer-events: none;
        cursor: not-allowed;
      }
    }
    .bootstrap-switch-wrapper {
      margin-bottom: 5px;
    }
    .bootstrap-switch .bootstrap-switch-handle-off.bootstrap-switch-default {
      color: #555;
    }
    .bootstrap-switch .bootstrap-switch-handle-on {
      background: #449d44; //#36a829;
    }

  }

  td.promoted-story-images, td.promoted-story-title {
    &.has-feedback {
      color: #fff;
      text-align: center;
      text-decoration: none;
      pointer-events: none;
    }
    &.has-success {
      background-color: #449d44;
      transition: background-color 0.3s ease;
    }
    &.has-error {
      background-color: #d9534f;
      transition: background-color 0.3s ease;
    }
  }
}
