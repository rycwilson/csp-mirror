
@import 'promoted_stories_table';
@import 'ads_text_content';
@import 'ads_image_content';

#promote {

  #gads-set-reset {
    margin: 20px 0;
    button {
      width: 150px;
    }
  }


  #gads-checklist, #gads-results {
    padding-left: 20px;
    font-size: 12px;
    margin-bottom: 15px;
    li {
      margin-bottom: 5px;
    }
    li.checked, li.success {
      color: #3c763d;
    }
    li.unchecked, li.errors {
       color: #a94442;
    }
    p {
      margin-bottom: 0;
    }
  }
  #gads-results__wrapper {
    display: none;
  }

  // some tweaks to accommodate the stacked image icons
  a[href="#gads-images"] {
    padding-left: 13px;
    i:first-child {
      position: absolute;
      top: 13px;
      left: 16px;
    }
    i:last-child {
      background-color: #fff;
      margin-right: 7px;
    }
  }

  #promoted-stories {
    margin-top: -6px;
  }

  #gads-images {

    > div, form {
      padding-right: 25px;
    }

  }

}