      ['height', ['height']],
      // ['table', ['table']],
      ['insert', ['link', 'picture', 'hr']],
      ['view', ['codeview']],
      // ['help', ['help']]
      ['customButton', ['placeholderDropdown']]
    ],
    buttons: {
      placeholderDropdown: PlaceholderDropdown
    },
    callbacks: {
      onInit: function() {
      }
    }
  });
}