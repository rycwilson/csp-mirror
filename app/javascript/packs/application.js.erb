function getAppData() {
  const app = { 
    current_user: {}, 
    company: {}, 
    stories: {}, 
    env: '', 
    reload: (callback = () => true) => { 
      $.getJSON('/app', function (data, status, xhr) {
        Object.assign(APP, data);
        callback();
      });
    }
  }
  $.getJSON('/app', function (data, status, xhr) { 
    Object.assign(app, data)
  });
  return app;
}
