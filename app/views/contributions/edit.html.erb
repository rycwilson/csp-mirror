<div class="container">
  <div class="row">
    <div class='col-md-8'>

      <% if @type == 'feedback' %>

        <%= render partial: 'contributions/shared/feedback_heading',
                    locals: { curator: @curator } %> <br>

        <%= render 'contributions/shared/feedback_form' %>

      <% elsif @type == 'contribution' %>

        <%= render partial: 'contributions/shared/contribution_heading',
                    locals: { curator: @curator } %> <br>

        <%= render 'contributions/shared/contribution_form' %>

      <% end %>

    </div>
  </div>
</div>
