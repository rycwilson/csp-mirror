
<%= form_for(contribution, url: submission_path(contribution.access_token),
      method: "put", html: { id: 'submission-form'}) do |f| %>

  <%= hidden_field_tag("submission", true) %>
  <%= f.hidden_field(:status, value: type + '_submitted') %>

  <% if type == 'contribution' %>

    <% contribution.contributor_questions.each do |question| %>

      <div class="form-group">
        <%= label_tag("answers[#{question.id}]", question.question) %>
        <%= text_area_tag("answers[#{question.id}]", nil, rows: 8, class: 'form-control') %>
      </div>

    <% end %>

    <div class="form-group">
      <%= label_tag("answers[additional]", 'Any additional thoughts you would like to share?') %>
      <%= text_area_tag("answers[additional]", nil, rows: 8, class: 'form-control') %>
    </div>

    <div class="form-group">

      <div class="row">

        <div class='col-xs-2 col-sm-1 text-center'>
          <i class="fa fa-2x fa-linkedin-square"></i>
        </div>

        <div class='col-xs-10 col-sm-11 checkbox'>
          <%= f.check_box(:publish_contributor, checked: true) %>
          Leave this box checked if you would like your LinkedIn profile published as part of the success story. You may return at any point in the future to add or remove your profile.
        </div>

      </div>

    </div>

  <% else %>

    <div class="form-group">
      <%= f.label(:feedback) %>
      <%= f.text_area(:feedback, rows: 11, class: 'form-control') %>
    </div>

  <% end %>

  <div class="form-group text-center hidden-xs">
    <button type="submit" class="btn btn-success" style='width: 65%'>
      <span>Submit</span>
      <i class='fa fa-spinner fa-pulse' style='display:none'></i>
      <i class='fa fa-check' style='display:none'></i>
    </button>
  </div>

  <div class="form-group text-center visible-xs" >
    <button type="submit" class="btn btn-success" style='width:100%; max-width:350px'>
      <span>Submit</span>
      <i class='fa fa-spinner fa-pulse' style='display:none'></i>
      <i class='fa fa-check' style='display:none'></i>
    </button>
  </div>


  <div class='form-group text-center'>
    <p class='tos'>
      By submitting you are agreeing to the <%= link_to 'Terms of Service', "#{ request.protocol + request.domain + request.port_string + '/tos' }", target: '_blank' %>
    </p>
  </div>

<% end %>