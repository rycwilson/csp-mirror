
<%= form_for(contribution, url: contributor_submission_path(contribution.access_token),
      method: "put", html: { id: 'submission-form' }) do |f| %>

  <%= hidden_field_tag("submission", true) %>
  <%= f.hidden_field(:status, value: type + '_submitted') %>

  <% if type == 'contribution' %>

    <% contribution.contributor_questions.each_with_index do |question, index| %>

      <div class="form-group question <%= index == 0 ? 'active' : '' %>">

        <%= label_tag("answers[#{question.id}]", "#{index + 1}. #{question.question}") %>

        <div class="visible-xs-block">
          <%= text_area_tag("answers[#{question.id}]", nil, rows: 3, class: 'form-control') %>
          <div class="next-question">
            <button class="btn btn-success btn-sm">Ok</button>
          </div>
        </div>

        <div class="hidden-xs">
          <%= text_area_tag("answers[#{question.id}]", nil, rows: 5, class: 'form-control') %>
          <div class="next-question">
            <button class="btn btn-success">Ok</button>
          </div>
        </div>

      </div>

    <% end %>

    <div class="form-group linkedin">

      <div class="row">

        <div class='col-xs-2 col-sm-1 text-center'>
          <i class="fa fa-2x fa-linkedin-square"></i>
        </div>

        <div class='col-xs-10 col-sm-11 checkbox'>
          <%= f.check_box(:publish_contributor, checked: true) %>
          Leave this box checked to have your LinkedIn profile published as part of the success story. You may return at any point in the future to add or remove your profile.
        </div>

      </div>

    </div>

  <% else %>

    <div class="form-group feedback">
      <%= f.label(:feedback, 'Please tell us about your experience and any actions you recommend') %>
      <%= f.text_area(:feedback, rows: 5, class: 'form-control') %>
    </div>

  <% end %>

  <div class="form-group submit text-center hidden-xs">
    <button type="submit" form="submission-form" class="btn btn-success" style="width: 60%" >
      <span><%= type == 'contribution'? 'Submit Answers' : 'Submit' %></span>
      <i class='fa fa-spin fa-circle-o-notch' style='display:none'></i>
      <i class='fa fa-check' style='display:none'></i>
    </button>
  </div>

  <div class="form-group submit text-center visible-xs" >
    <button type="submit" form="submission-form" class="btn btn-success" style="width: 60%" >
      <span><%= type == 'contribution'? 'Submit Answers' : 'Submit' %></span>
      <i class='fa fa-spin fa-circle-o-notch' style='display:none'></i>
      <i class='fa fa-check' style='display:none'></i>
    </button>
  </div>


  <div class='form-group tos text-center'>
    <p class='tos'>
      By submitting you are agreeing to the <%= link_to 'Terms of Service', "#{ request.protocol + request.domain + request.port_string + '/tos' }", target: '_blank' %>
    </p>
  </div>

<% end %>