
var contribution = <%= raw @contribution.to_json %>
var flash = <%= raw flash[:info].to_json %>

console.log('Contribution request sent for: ', contribution)

$('#flash').toggleClass('hidden').append(flash);
// another way:
// $('#flash').hide().append(flash).fadeIn('fast');

setTimeout(function () {
  $('#flash').slideUp();
}, 3000);

setTimeout(function () {
  $('#flash').toggleClass('hidden')
  // dispay:none setting appears after first click-cycle,
  // leads to subsequent failures
  // solution...
  $('#flash').css('display', '');
  // remove all text, leave child elements
  $('#flash').html($('#flash').children());
}, 4000);
