<div class='row'>
  <div class="col-xs-12">
    <div class="accordion" id="accordion-guidance">
      <div class="accordion-group">

        <div id='pointer-toggle' class="accordion-heading">
          <p>Thank you for contributing to this success story. Here are some helpful pointers:&nbsp;
          <a class="accordion-toggle" data-toggle="collapse"
             data-parent="#accordion-guidance"
             href="#collapse-guidance">show pointers</a></p>
        </div>

        <div id="collapse-guidance" class="accordion-body collapse">
          <div class="accordion-inner">
            <% @prompts.each do |prompt|  %>
              <i class="icon-li fa fa-hand-o-right"></i>&nbsp;
              <%= prompt.description %> <br>
            <% end %>
          </div>
        </div>

      </div>  <!-- accordian-group -->
    </div>  <!-- accordian -->
  </div>
</div>

<div class="row">
  <%= form_for contribution, url: "/contributions/#{contribution.access_token}",
          method: "put", html: { id: 'contribution-submission-form'} do |f| %>

    <%= hidden_field_tag "contribution[status]", response_type %>

    <div class="form-group col-xs-12">
      <%= f.text_area :contribution, rows:"12",
          class: 'form-control', width: "70%",
          placeholder: 'Add your notes here ...', tabindex: '2',
          autofocus: true %>
    </div>

    <div class="form-group">
      <div class='col-xs-2 col-sm-2 text-right' style='margin-top:-3px'>
        <i class="fa fa-3x fa-linkedin-square"></i>
      </div>
      <div class='col-xs-10 col-sm-10 col-md-9 checkbox-inline' style='margin-right:-2px'>
        <%= f.check_box :linkedin %>
        Check here if you want your LinkedIn profile to be included in the success story. You can add or remove your profile at any time.
      </div>
    </div>

    <div class="form-group">
      <div class='col-xs-8 col-xs-offset-2'>
        <%= f.submit 'Submit', class: 'btn btn-primary btn-block' %> <br>
      </div>
    </div>

    <div class='col-xs-12 text-center'>
      <p class='tos'>By submitting you are agreeing to the <%= link_to 'Terms of Service', "#{ request.protocol + request.domain + request.port_string + '/tos' }", target: '_blank' %></p>
    </div>

  <% end %>
</div>

<br>

