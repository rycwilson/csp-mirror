
(function () {

  $('select.invitation-template').val('').trigger('change.select2');
  $('#invitation-template-container').empty();
  $('#invitation-template-submit').removeClass('show');

  // update template select options
  $('select.invitation-template')
    .select2('destroy').empty()
    .prepend('<option selected/>')  // placeholder
    .select2({
      theme: 'bootstrap',
      placeholder: 'Select',
      data: <%= raw @company.invitation_templates.grouped_select2_options().to_json %>
    })

}());