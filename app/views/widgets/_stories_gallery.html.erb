
<div class="cs-overlay-container">

  <%= render('stories/show/video_modal', { is_widget: true }) %>

  <div class="cs-main">

    <section class="cs-grid hidden">

      <% stories.each do |story| %>

        <%= render(
              'stories/shared/story_card',
              {
                story: story,
                is_curator: false,
                is_widget: true,
                is_external: true
              }
            ) %>

      <% end %>

    </section><!-- /grid -->

    <section class="cs-content">

      <div class="scroll-wrap">

        <% stories.each do |story| %>

          <div class="content__item">
          </div>

        <% end %>

      </div>

      <button class="hidden-xs close-button"><i class="fa fa-times-thin fa-3x"></i><span>Close</span></button>

      <button class="visible-xs close-button-xs">
        <span class="fa-stack">
          <i class="fa fa-circle fa-stack-2x"></i>

          <i class="fa fa-times-thin fa-inverse fa-stack-1x"></i>
        </span>
        <!-- <i style="color: white" class="fa fa-fw fa-times-thin fa-3x"></i> -->
      </button>

    </section><!-- /content -->

  </div><!-- /main -->

</div>