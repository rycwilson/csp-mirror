
<section class='cs-drawer' style='visibility:hidden'>
  <header class='cs-header text-center' style="<%= widget.tab_style %>">
    <span>
      <span><%= title %></span>&nbsp;
      <i class='fa fa-chevron-up'></i><i class='fa fa-chevron-down'></i>
    </span>
  </header>
  <div class='cs-drawer-content' style='border-top-color:<%= widget.tab_color %>'>
    <div class='cs-drawer-items'>
      <div class='cs-scroll-left'></div>
      <div class='cs-row cs-pagination-row text-center'>
      </div>
      <div class='cs-row row-horizon text-center'>

      <!-- the bootstrap styling starts to break down after 30 stories -->
      <% stories.first(30).each do |story|  %>

        <div class='col-xs-6 col-sm-5 col-md-3'>

          <a href="<%= story[:path] %>" class='cs-thumbnail'>

            <div class="cs-thumbnail-view">

            <% if story[:is_published] %>
              <p class='cs-thumbnail-view-hover'>
                <%= story[:title] %>
              </p>
            <% end %>

              <img class='cs-img' src="<%= story[:logo] %>" alt=''>

            </div>

          </a>

        </div>

      <% end %>

      </div>
      <div class='cs-scroll-right'></div>
    </div>
  </div>
</section>
