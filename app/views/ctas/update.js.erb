(function () {

  var id = '<%= @cta.id %>',
      description = '<%= @cta.description %>';

  // update description field
  $('li[data-cta-id="' + id + '"] .cta-description span')
    .text(description);

  // ajax confirm
  $('form[action*="' + id + '"] .ajax-confirm').fadeToggle('fast', 'swing', function () {
    var _$this = $(this)
    setTimeout(function () {
      _$this.fadeToggle('fast')
    }, 3000);
  })

}());