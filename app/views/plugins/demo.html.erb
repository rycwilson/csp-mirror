  <% if params[:type] == 'gallery' %>

    <div id="cs-gallery"></div>
    <script src="<%= root_url + 'plugins/gallery/cs.js' %>" data-demo="1" <%= params_to_data_attrs(params) %>></script>

  <% elsif params[:type] == 'carousel' %>

    <div id="cs-carousel"></div>
    <script src="<%= root_url + 'plugins/carousel/cs.js' %>" data-demo="1" <%= params_to_data_attrs(params) %>></script>

  <% elsif params[:type] == 'tabbed_carousel' %>

    <div id="cs-tabbed-carousel"></div>
    <script src="<%= root_url + 'plugins/tabbed_carousel/cs.js' %>" data-demo="1" <%= params_to_data_attrs(params) %>></script>

  <% end %>

</body>