
(function () {

  var company = <%= raw @company.to_json({ only: [:id] }) %>,
      contributorQuestions = <%= raw @template.contributor_questions
                                  .to_json({ only: [:id, :company_id, :question] }) %>;

  $('.contributor-questions ul').empty()
    .append(
      _.template( $('#contributor-questions-template').html() )(
        { company: company, contributorQuestions: contributorQuestions }
      )
    );

  $('button[type="submit"]').find('.fa-spinner, .fa-check').toggle()
  window.setTimeout(function () {
    $('button[type="submit"]').find('.fa-check, span').toggle();
  }, 2000);

}());