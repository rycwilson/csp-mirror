
<div id="websites-desktop" style="padding-top: 40px;" role="tabpanel" class="tab-pane fade">

  <div class="ad image-ad tower">
    <%= render('adwords_ads/ads_by_google') %>
    <div class="landscape-image" style="background-image: url(<%= @image_url %>)"></div>
    <div class="spacer" style="height: 30px"></div>
    <div>
      <div class="short-headline">
        <span style="font-size: <%= @ads_params[:tower][:sh_font_size] %>"><%= @short_headline %></span>
      </div>
      <div class="spacer" style="height: 24px"></div>
      <div class="logo" style="background-image: url(<%= @logo_url %>)"></div>
      <div class="spacer" style="height: 12px"></div>
      <div class="description">
        <span style="font-size: <%= @ads_params[:tower][:desc_font_size] %>"><%= @description %></span>
      </div>
      <div class="spacer" style="height: 18px"></div>
      <button class="<%= @button_background %>" style="background-color: <%= @accent_color %>"></button>
    </div>
    <div class="spacer" style="height: 60px"></div>
  </div>

  <div class="ad image-ad banner">
    <%= render('adwords_ads/ads_by_google') %>
    <div class="landscape-image" style="background-image: url(<%= @image_url %>)"></div>
    <div class="logo" style="background-image: url(<%= @logo_url %>)"></div>
    <div class="short-headline">
      <span style="font-size: <%= @ads_params[:banner][:sh_font_size] %>"><%= @short_headline %></span>
    </div>
    <div class="description">
      <span style="font-size: <%= @ads_params[:banner][:desc_font_size] %>"><%= @description %></span>
    </div>
    <button class="<%= @button_background %>" style="background-color: <%= @accent_color %>"></button>
    <div class="spacer"></div>
  </div>

  <%= render('adwords_ads/previews/image_1_300x250', { is_mobile: false }) %>

  <%= render('adwords_ads/previews/text_1_300x250', { is_mobile: false }) %>

  <div class="ad native-ad native-1">
    <%= render('adwords_ads/ads_by_google') %>
    <div class="landscape-image" style="background-image: url(<%= @image_url %>)"></div>
    <div>
      <div class="long-headline">
        <a style="font-size: <%= @ads_params[:native_1][:lh_font_size] %>">
          <%= @long_headline %>
        </a>
      </div>
      <div class="spacer" style="height: 11px;"></div>
      <div class="business-name">
        <div class="ad-box ad-box-green"><span>Ad</span></div>
        <a href="javascript:;"><%= @business_name %></a>
      </div>
      <div class="spacer" style="height: 10px;"></div>
      <div class="call-to-action">
        <a href="javascript:;"><%= @cta_text %></a>
      </div>
    </div>
  </div>

  <div class="ad native-ad native-sm">
    <%= render('adwords_ads/ads_by_google') %>
    <div class="square-image" style="background-image: url(<%= @square_image_url %>)"></div>
    <div>
      <div class="long-headline">
        <a href="javascript:;"><%= @long_headline %></a>
      </div>
      <div>
        <div class="business-name">
          <div class="ad-box ad-box-green"><span>Ad</span></div>
          <a><%= @business_name %></a>
        </div>
        <div class="call-to-action">
          <a href="javascript:;"><%= @cta_text %></a>
        </div>
      </div>
    </div>
  </div>

  <%= render('adwords_ads/previews/native_2_300x250', { is_mobile: false }) %>

</div>