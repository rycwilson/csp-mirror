
<%= form_for(
      user, 
      {
        url: registration_path(user), 
        method: 'PUT', 
        remote: true, 
        authenticity_token: true,
        html: {
          id: 'user-profile-form',
          class: 'user-profile directUpload form-horizontal',
          data: {
            'form-data' => (s3_direct_post.fields),
            'url' => s3_direct_post.url,
            'host' => URI.parse(s3_direct_post.url).host
          }
        }
      }
    ) do |f| %>

  <div class="visible-sm-block">
    <div style="display: flex; justify-content: center">
    <div style="width: 140px; height: 140px; background: #d9e3da">
      <div style="height: 110px">
      </div> 
      <div style="height: 30px; background: #d1cfc0; display: flex; align-items: center; justify-content: center">
        <i class="fa fa-fw fa-upload"></i>&nbsp;
        <span>Upload a photo</span>
      </div>
    </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:first_name, 'First name', class: 'col-sm-4 control-label') %>
    <div class="col-sm-5">
      <%= f.text_field(:last_name, class: 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:last_name, 'Last name', class: 'col-sm-4 control-label') %>
    <div class="col-sm-5">
      <%= f.text_field(:last_name, class: 'form-control') %>
    </div>
  </div>


