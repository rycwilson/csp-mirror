  <% if user.company.present? %>
    <div class="form-group">
      <label class="col-sm-3 control-label">Company</label>
      <div class="col-sm-9 col-md-6">
        <%= text_field_tag(
              nil, 
              user.company.name,
              class: 'form-control',
              disabled: true
            ) %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label(:title, 'Job Title', class: 'col-sm-3 control-label') %>
    <div class="col-sm-9 col-md-6">
      <%= f.text_field(:title, class: 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:email, 'Email', class: 'col-sm-3 control-label') %>
    <div class="col-sm-9 col-md-6">
      <%= f.email_field(:email, class: 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:phone, 'Phone', class: 'col-sm-3 control-label') %>
    <div class="col-sm-9 col-md-6">
      <%= f.telephone_field(:phone, class: 'form-control') %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9 col-md-6 text-right">
      <button type="submit" class="btn btn-success" form="company-profile-form" style="width:114px">
        <span>Save changes</span>
        <i class='fa fa-spin fa-circle-o-notch' style="display:none"></i>
        <i class='fa fa-check' style="display: none"></i>
      </button>
    </div>
  </div>

<% end %>