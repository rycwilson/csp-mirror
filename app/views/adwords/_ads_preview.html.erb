
<div class='row'>
  <div class='portlet portlet-default'>

    <form class="form-horizontal">
      <div class="form-group" style='width:100%'> <!-- define width so select2 has parent width -->
        <label for="ads-preview-story-select" class='col-sm-2 control-label'>
          Story
        </label>
        <div class='col-sm-10'>
          <!-- we don't want an 'All' option, so slice the options array -->
          <%= select_tag :story_id, options_for_select(company.stories.select_options[1..-1]),
            { id: 'ads-preview-story-select', class: 'form-control', style: 'width:70%' } %>

        </div>
      </div>

      <div class="form-group" style='width:100%'>
        <label class='col-sm-2 control-label'>
          Ad type
        </label>
        <div class='col-sm-10 ad-types btn-group' data-toggle="buttons">
          <label class="btn btn-secondary active" data-toggle='tab' data-target='#native-ads-panel'>
            <input type="radio" name="options" id="ads-native" autocomplete="off" checked> Native
          </label>
          <label class="btn btn-secondary" data-toggle='tab' data-target='#image-ads-panel'>
            <input type="radio" name="options" id="ads-image" autocomplete="off"> Image
          </label>
          <label class="btn btn-secondary" data-toggle='tab' data-target='#text-ads-panel'>
            <input type="radio" name="options" id="ads-text" autocomplete="off"> Text
          </label>
        </div>
      </div>

    </form>


    <div id='native-ads-panel' class='tab-pane fade in active' style='position:relative'>
      <h3>Native</h3>

    </div>

    <div id='image-ads-panel' class='tab-pane fade'>
      <h3>Image</h3>

    </div>

    <div id='text-ads-panel' class='tab-pane fade'>
      <h3>Text</h3>

    </div>


  </div>  <!-- portlet -->
</div>  <!-- row -->