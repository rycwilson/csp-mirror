
<%= render 'adwords/image_select_modal', { company: company } %>

<div class="row enable-promote-type">
  <div class="col-sm-12">

    <%= render 'adwords/enable_promote_type', { company: company } %>

  </div>
</div>

<div class="sponsored-stories">

  <table id='sponsored-stories-table'
         class="datatable table table-striped table-bordered">
    <thead>
      <tr>
        <th>Customer</th>
        <th>Story Title <a>(hide)</a> / Sponsored Story Title</th>
        <th>Sponsored Story Image</th>
        <th>Status</th>
        <th>Preview</th>
      </tr>
    </thead>
    <tbody>

      <% company.stories.published.each do |story| %>

        <tr data-story-id="<%= story.id %>">

          <td><%= story.customer.name %></td>

          <td class='sponsored-story-title'>
            <p><%= story.title %></p>
            <p><a data-pk="<%= story.id %>"><%= story.title %></a></p>
          </td>

          <td class='sponsored-story-image'>
            <div class="fileinput fileinput-exists" data-provides="fileinput">
              <div class="fileinput-preview thumbnail">
                <%= image_tag story.adwords_image.try(:image_url) || ADWORDS_IMAGE_PLACEHOLDER_URL, alt: 'adwords image' %>
              </div>
              <%= file_field_tag(:image_url, class: 'hidden') %>
              <!-- click to change -->
            </div>
          </td>

          <td class='dropdown status-dropdown'>
            <div style='position:relative'>  <!-- div for styling only -->
              <a href="javascript:;" class="dropdown-toggle" data-toggle='dropdown'>
                <% if true %>
                  <i class='fa fa-play'></i>&nbsp;
                <% else %>
                  <i class='fa fa-pause'></i>
                <% end %>
                <i class='fa fa-caret-down'></i>
              </a>
              <ul class='dropdown-menu'>
                <li><a href="javascript:;">Enable</a></li>
                <li><a href="javascript:;">Pause</a></li>
              </ul>
            </div>
          </td>
          <td class='preview-window'>
            <a href="javascript:;">
              <i class='glyphicon glyphicon-new-window'></i>
            </a>
          </td>
        </tr>

      <% end %>

    </tbody>
  </table>

</div>
