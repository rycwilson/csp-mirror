
<%= render('shared/navbars/company_nav', { company: nil, workflow_stage: nil }) %>

<div class="content">
  <div class="container">
    <div class="layout layout-main-right layout-stack-sm">

      <div class="col-sm-3 layout-sidebar">

        <%= render 'companies/settings/tabs' %>

      </div> <!-- /.col -->

      <div class="col-sm-9 layout-main">
        <div class="tab-content stacked-content">

          <div class="tab-pane fade in active" id="company-profile">

            <%= render 'companies/settings/company_form', { company: @company, form_options: @form_options } %>

          </div>

        </div> <!-- /.tab-content -->
      </div> <!-- /.col -->

    </div> <!-- /.row -->
  </div>  <!-- container -->
</div>
