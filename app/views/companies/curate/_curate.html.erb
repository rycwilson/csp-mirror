
<div id='curate' role='tabpanel' class="<%= workflow_stage == 'curate' ? 'active tab-pane fade in' : 'tab-pane fade' %>">

  <div class='container clip'>

    <div class="hidden">
      <ul class="nav nav-tabs">
        <li class="<%= curate_view == 'stories' ? 'active' : '' %>">
          <a href="#curate-stories" data-toggle='tab' data-target='#curate-stories'></a>
        </li>
        <li class="<%= curate_view == 'story' ? 'active' : '' %>">
          <a href="#curate-story" data-toggle='tab' data-target='#curate-story'></a>
        </li>
      </ul>
    </div>

    <div class="tab-content">

      <div id='curate-stories'
          class="tab-pane fade <%= curate_view == 'stories' ? 'active in' : '' %>">

        <div class="layout">

          <div class="col-md-3 col-sm-4 layout-sidebar">

            <div class='sidebar-contents'>

              <h4 class='lead' style='margin-bottom:0'>
                <a href='/'>Customer Stories</a>
              </h4>

              <hr style='margin-top:25px; margin-bottom: 0'>

              <div class="text-center">
                <button type='button' style='width:200px; margin:25px 0;' class='btn btn-secondary' data-toggle='modal' data-target='#new-story-modal'><i class='fa fa-plus-circle fa-fw'></i>&nbsp;New Story</button>
              </div>

              <%= render 'companies/curate/filters', { company: company } %>

            </div>

          </div>

          <div class="col-md-9 col-sm-8 layout-main">
            <div class="row" style='margin-top:2px; margin-bottom:20px;'>

              <div class="col-sm-10 col-sm-offset-1">
                <div class="row">

                  <!-- <div class='col-sm-3'> -->
                    <label style='margin-right:30px'>
                      <input class='curate pending-curation' type="checkbox" checked='true'>&nbsp;
                      Curation started
                    </label>
                  <!-- </div> -->
                  <!-- <div class='col-sm-3'> -->
                    <label style='margin-right:30px'>
                      <input class='curate logo-published' type="checkbox" checked='true'>&nbsp;
                      Logo published
                    </label>
                  <!-- </div> -->
                  <!-- <div class='col-sm-3'> -->
                    <label style='margin-right:30px'>
                      <input class='curate preview-published' type="checkbox" checked='true'>&nbsp;
                      Preview published
                    </label>
                  <!-- </div> -->
                  <!-- <div class='col-sm-3'> -->
                    <label style='margin-right:30px'>
                      <input class='curate published' checked='true' type="checkbox">&nbsp;
                      Story Published
                    </label>
                  <!-- </div> -->

                </div>
              </div>

            </div>

            <ul id="curate-gallery" class='grid list-unstyled text-center'>
            </ul>

          </div>

        </div>

      </div>

      <div id='curate-story' class="tab-pane fade <%= curate_view == 'story' ? 'active in' : '' %>">

        <% if curate_view == 'story' %>

          <%= render({
                partial: 'stories/edit/edit',
                locals: { company: company, story: story, tab: curate_story_tab }
              }) %>

        <% end %>

      </div>

    </div>
  </div>

</div>


