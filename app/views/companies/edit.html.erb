
<% content_for :head do %>

  <meta name="turbolinks-cache-control" content="no-cache">
  <%= render 'ctas/cta_template' %>

<% end %>

<div class="wrapper">

  <%= render 'shared/company_navbar', { company: @company, workflow_stage: @workflow_stage } %>

  <div class="container clip">
    <div class="layout layout-main-right layout-stack-sm">

      <div class="col-sm-3 layout-sidebar">

        <%= render 'companies/settings/side_tabs' %>

      </div>

      <div class="col-sm-9 layout-main">
        <div class="tab-content stacked-content">

          <div class="tab-pane fade in active" id="company-profile">
            <%= render 'companies/settings/profile', { company: @company } %>
          </div>

          <div class="tab-pane fade" id="crowdsourcing-templates">
            <%= render 'companies/settings/crowdsourcing_templates',
                   { company: @company, templates_select: @templates_select } %>
          </div>

          <div class="tab-pane fade" id="story-tags">
            <%= render 'companies/settings/story_tags', { company: @company } %>
          </div>

          <div class="tab-pane fade" id="story-ctas">
            <%= render 'companies/settings/story_ctas', { company: @company } %>
          </div>

          <div class="tab-pane fade" id="widget-config">
            <%= render 'companies/settings/widget_config',
                  { company: @company, widget: @company.widget } %>
          </div>

        </div> <!-- /.tab-content -->
      </div> <!-- /.col -->

    </div> <!-- /.row -->
  </div>  <!-- container -->
</div>  <!-- wrapper -->