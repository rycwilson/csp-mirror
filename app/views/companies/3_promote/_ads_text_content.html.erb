
<%= form_for(
      company,
      url: company_path(company),
      method: 'put',
      remote: 'true',
      authenticity_token: true,
      html: {
        id: 'gads-content-form',
        class: 'form-horizontal'
      }
    ) do |f| %>

  <div class="row">

    <div class="form-group business-name">
      <label class="control-label col-sm-3">Company Name</label>
      <div class="col-sm-6">
        <%= f.text_field(
              :gads_business_name,
              class: 'form-control',
              maxlength: '25',
              value: f.object.gads_business_name || company.name.truncate(25)
            ) %>
        <span class="help-block with-errors">Max 25 characters</span>
         <button type="button" role="button" class="btn-help" style="position: absolute; top: -4px; right: -40px" data-toggle="popover" data-placement="top" data-trigger="focus">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle-o fa-stack-2x"></i>
            <i class="fa fa-question fa-stack-1x"></i>
          </span>
        </button>
      </div>
      <div class="col-sm-3"><!-- filler --></div>
    </div>

    <div class="form-group short-headline">
      <label class="control-label col-sm-3">Short Headline</label>
      <div class="col-sm-6">
        <%= f.text_field(
              :gads_default_short_headline,
              class: 'form-control',
              maxlength: '30',
              value: f.object.gads_default_short_headline || "#{company.name} Customer Stories".truncate(30)
            ) %>
        <span class="help-block with-errors">Max 30 characters</span>
        <button type="button" role="button" class="btn-help" style="position: absolute; top: -4px; right: -40px" data-toggle="popover" data-placement="top" data-trigger="focus">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle-o fa-stack-2x"></i>
            <i class="fa fa-question fa-stack-1x"></i>
          </span>
        </button>
      </div>
      <div class="col-sm-3"><!-- filler --></div>
    </div>

    <div class="form-group long-headline">
      <label class="control-label col-sm-3">Long Headline</label>
      <div class="col-sm-6">
        <%= f.text_field(
                :gads_default_long_headline,
                class: 'form-control',
                maxlength: '90',
                value: f.object.gads_default_long_headline
              ) %>
        <span class="help-block with-errors">Max 90 characters</span>
        <button type="button" role="button" class="btn-help" style="position: absolute; top: -3px; right: -40px" data-toggle="popover" data-placement="top" data-trigger="focus">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle-o fa-stack-2x"></i>
            <i class="fa fa-question fa-stack-1x"></i>
          </span>
        </button>
      </div>
      <div class="col-sm-3"><!-- filler --></div>
    </div>

    <div class="form-group">
      <label class="control-label col-sm-3">Call to action</label>
      <div class="col-sm-6">

        <%= f.select(
              :gads_default_cta_text,
              [['Learn More', 'Learn More'], ['Visit Site', 'Visit Site'], ['See More', 'See More']],
            ) %>

      </div>
      <div class="col-sm-3"></div>
    </div>

    <div class="form-group custom-colors">
      <label class="control-label col-sm-3">Custom Colors</label>
      <div class="col-sm-6">
        <div class="form-inline">
          <%= f.label(:gads_default_main_color, 'Main', class: 'help-block') %>
          <%= f.text_field(:gads_default_main_color, class: 'form-control mini-colors') %>
        </div>
        <div class="form-inline">
          <%= f.label(:gads_default_accent_color, 'Accent', class: 'help-block') %>
          <%= f.text_field(:gads_default_accent_color, class: 'form-control mini-colors') %>
        </div>
        <button type="button" role="button" class="btn-help" data-toggle="popover" data-placement="top" data-trigger="focus" style="position: absolute; top: -3px; right: -40px">
          <span class="fa-stack fa-lg">
            <i class="fa fa-circle-o fa-stack-2x"></i>
            <i class="fa fa-question fa-stack-1x"></i>
          </span>
        </button>
      </div>
      <div class="col-sm-3"><!-- filler --></div>
    </div>

  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 text-right" style="padding: 0; margin-top: 0; margin-bottom: 15px">
      <hr style="margin-top: 0">
      <div class="checkbox">
        <label>
          <input type="checkbox" name="apply_google_changes" value="true">
          <span>Apply changes to existing Promoted Stories</span>
        </label>
      </div>
    </div>

  </div>

  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="form-group text-right">

        <button type="button" class="btn btn-secondary btn-preview" style="margin: 0 5px">
          <i class="glyphicon glyphicon-new-window"></i>&nbsp;
          Preview
        </button>

        <button type="submit" class="btn btn-success text-center" style="width: 114px">
          <span>Save changes</span>
          <i class="fa fa-spin fa-circle-o-notch" style="display: none"></i>
          <i class="fa fa-check" style="display: none"></i>
        </button>

      </div>
    </div>
  </div>

<% end %>