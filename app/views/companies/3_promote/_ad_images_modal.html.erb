
<!-- modal footer content consists of story form generated on the fly -->
<% content_for :underscore_templates do %>

  <script id="ads-images-form-template" type="text/template">

    <form id="ads-images-form"
          action="/stories/{{= storyId }}/update_gads" accept-charset="UTF-8"
          method="put" data-remote="true" data-type="json" data-story-id="{{= storyId }}">

      <input type="hidden" name="ads_images_ids[]">

      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <button type="submit" class="btn btn-success text-center" disabled style="">
        <span class="submit-toggle">Save selections</span>
        <i class="fa fa-spinner fa-pulse submit-toggle" style='display:none'></i>
      </button>

    </form>

  </script>

<% end %>

<div id="ads-images-modal" class="modal fade" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Promoted Story Images</h4>
        <h5 class="story-title"></h5>
      </div>

      <div class="modal-body" style="display: flex; justify-content: space-around; margin-top: 15px">


          <div style="width: 56%">
            <h4 style="color: #888; text-align: center">Marketing Images*</h4>
            <div>
              <ul class="text-center list-inline">

                <% company.adwords_images.marketing.each do |ad_image| %>

                  <li style="position: relative" class="<%= ad_image_card_class_name(ad_image) %>" data-image-id="<%= ad_image.id %>">
                    <img src="<%= ad_image.image_url %>" alt="marketing image">

                    <div class="check" style="position: absolute; bottom: -10px; right: -10px">
                      <div style="position: relative">
                        <div style="position: absolute; top: 2px; left: 4px; height: 24px; width: 24px; background: #fff; border-radius: 14px"></div>
                        <span class="fa-stack fa-lg">
                        <i class="fa fa-circle-o fa-stack-2x"></i>
                        <i class="fa fa-check fa-stack-1x"></i>
                      </div>
                    </div>
                  </li>

                <% end %>

              </ul>
            </div>
          </div>
          <div style="width: 44%">
            <h4 style="color: #888; text-align: center">Logos*</h4>
            <div>

              <ul class="text-center list-inline">

                <% company.adwords_images.logos.each do |ad_image| %>

                  <li class="<%= ad_image_card_class_name(ad_image) %>" data-image-id="<%= ad_image.id %>">
                    <img src="<%= ad_image.image_url %>" alt="marketing image">
                  </li>

                <% end %>

              </ul>

            </div>
          </div>



      </div>

      <div class="modal-footer">
        <span class="help-block">
          Select up to 15 marketing images and up to 5 logos
        </span>
      </div>

    </div>
  </div>
</div>
