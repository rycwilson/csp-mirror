
<script type="text/template" id="promoted-story-child-row-template">

  {{ var AUTH_TOKEN = $("meta[name=csrf-token]").attr("content"); }}

  <div class="container child-row">

    <form id="promoted-story-form-{{= promotedStory.id }}" action="{{= adsPath }}" method="post" data-remote="true" data-type="script" class="form-horizontal">

      <input type="hidden" name="_method" value="put">
      <input type="hidden" name="authenticity_token" value="{{= AUTH_TOKEN }}">

      <input type="hidden" name="story[topic_ad_attributes][id]" value="{{= promotedStory.topic_ad.id }}">
      <input type="hidden" name="story[retarget_ad_attributes][id]" value="{{= promotedStory.retarget_ad.id }}">

      <input type="hidden" 
          name="story[retarget_ad_attributes][short_headline]"
          value="{{= promotedStory.ads_short_headline }}">
      <input type="hidden" 
          name="story[retarget_ad_attributes][long_headline]"
          value="{{= promotedStory.ads_long_headline }}">
      <input type="hidden" 
          name="story[retarget_ad_attributes][main_color]"
          value="{{= promotedStory.ads_main_color }}">
      <input type="hidden" 
          name="story[retarget_ad_attributes][accent_color]"
          value="{{= promotedStory.ads_accent_color }}">

      <div class="row">
        <div class="col-sm-4">
   
        </div>
        <div class="col-sm-8">
          <div class="row">

            <div class="form-group">
              <label for="story[topic_ad_attributes][short_headline]" class="col-sm-3 control-label">
                Short Headline
              </label>
              <div class="col-sm-8">
                <input type="text" class="form-control"
                  id="story_topic_ad_attributes_short_headline"
                  name="story[topic_ad_attributes][short_headline]"
                  value="{{= promotedStory.ads_short_headline }}"
                  maxlength="30">
                <span class="help-block with-errors">Max 30 characters</span>
              </div>
            </div>

            <div class="form-group">
              <label for="story[topic_ad_attributes][long_headline]" class="col-sm-3 control-label">
                Long Headline
              </label>
              <div class="col-sm-8">
                <input type="text" class="form-control"
                  id="story_topic_ad_attributes_long_headline"
                  name="story[topic_ad_attributes][long_headline]"
                  value="{{= promotedStory.ads_long_headline }}"
                  maxlength="90">
                <span class="help-block with-errors">Max 90 characters</span>
              </div>
            </div>

            <div class="form-group form-group--colors">
              <label class="col-sm-3 control-label">
                Custom Colors
              </label>
              <div class="col-sm-8">
                <div class="form-inline">
                  <label class="help-block">Main</label>
                  <input type="text" 
                      class="form-control mini-colors" 
                      name="story[topic_ad_attributes][main_color]"
                      value="{{= promotedStory.ads_main_color }}">
                </div>
                <div class="form-inline">
                  <label class="help-block">Accent</label>
                  <input type="text" 
                      class="form-control mini-colors" 
                      name="story[topic_ad_attributes][accent_color]"
                      value="{{= promotedStory.ads_accent_color }}">
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-sm-12 text-right">

          <button type="button" class="btn btn-sm btn-secondary btn-preview" style="margin: 0 5px">
            <i class="glyphicon glyphicon-new-window"></i>&nbsp;
            Preview
          </button>

          <button type="submit" disabled class="btn btn-sm btn-success text-center" style="width: 97px">
            <span>Save changes</span>
            <i class="fa fa-spin fa-circle-o-notch" style="display:none"></i>
            <i class="fa fa-check" style="display:none"></i>
          </button>

        </div>
      </div>

    </form>

  </div>

</script>