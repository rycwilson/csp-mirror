
= form_for( \
    company,
    url: update_gads_company_path(company),
    method: 'put',
    remote: 'true',
    authenticity_token: true,
    html: { \
      id: 'gads-form',
      class: "directUpload",
      data: { \
        url: @s3_direct_post.url,
        host: URI.parse(@s3_direct_post.url).host,
        'form-data' => (@s3_direct_post.fields) }}) do |f|

  .form-group.short-headline
    = f.label(:adwords_short_headline, "Headline", class: 'control-label')
    = f.text_field( \
        :adwords_short_headline,
        required: true,
        class: 'form-control',
        style: 'width:300px',
        maxlength: RESPONSIVE_AD_SHORT_HEADLINE_MAX.to_s,
        data: { 'required-error': 'Required field' })
    button.btn.btn-success type="submit" style="display: none; width: 59px; margin-left: 10px"
      span Save
      i.fa.fa-spin.fa-circle-o-notch style="display: none"
      i.fa.fa-check style="display:none"
    span.help-block.with-errors style="position: absolute; left: 72px; bottom: -25px"
      | Max 30 characters

  .image-library__header
    label Image Library
    .btn-group
      a.btn.btn-secondary.active href="#image-library__marketing" data-toggle="tab"
        i.fa.fa-fw.fa-image
        | &nbsp;&nbsp;
        | Marketing
      a.btn.btn-secondary href="#image-library__logos" data-toggle="tab" style="width: 122px"
        i.fa.fa-fw.fa-flag
        | &nbsp;&nbsp;
        | Logos

  .image-library.tab-content

    #image-library__marketing.tab-pane.fade.in.active
      .image-library__sub-header
        label Marketing Images
        button.btn-add {
          type="button" 
          disabled=('true' if missing_default_google_images?(company, 'marketing')) }
          span.fa-stack.fa-lg
            i.fa.fa-circle-o.fa-stack-2x
            i.fa.fa-plus.fa-stack-1x
        button.image-requirements.marketing {
          type="button" 
          role="button"
          data-toggle="popover" 
          data-placement="right" 
          data-trigger="focus"
          data-square-min="300x300" 
          data-square-ratio="1:1"
          data-landscape-min="600x314" 
          data-landscape-ratio="1.91:1" }
          span.fa-stack.fa-lg
            i.fa.fa-circle-o.fa-stack-2x
            i.fa.fa-question.fa-stack-1x
      ul style="padding: 0"
        = render( \
            'companies/3_promote/ad_image_card',
            { image_index: '0',
              ad_image: company.adwords_images.square_images.default.take || { \
                id: '',
                type: 'SquareImage',
                placeholder_image_url: RESPONSIVE_AD_SQUARE_IMAGE_PLACEHOLDER,
                default: true \
              },
              is_required: true })
        = render( \
            'companies/3_promote/ad_image_card',
            { image_index: '1',
              ad_image: company.adwords_images.landscape_images.default.take || { \
                id: '',
                type: 'LandscapeImage',
                  placeholder_image_url: RESPONSIVE_AD_LANDSCAPE_IMAGE_PLACEHOLDER,
                  default: true \
                },
              is_required: true })
        br
        - company.ad_images.marketing.select { |img| !img.default? }.each_with_index do |img, i|
          = render( \
              'companies/3_promote/ad_image_card',
              { image_index: (i + 2).to_s,
                ad_image: img,
                is_required: false })

    #image-library__logos.tab-pane.fade
      .image-library__sub-header
        label Logos
        button.btn-add type="button"
          span.fa-stack.fa-lg
            i.fa.fa-circle-o.fa-stack-2x
            i.fa.fa-plus.fa-stack-1x
        button.image-requirements.logos {
          type="button" 
          role="button"
          data-toggle="popover" 
          data-placement="right" 
          data-trigger="focus"
          data-square-min="128x128" 
          data-square-ratio="1:1" 
          data-square-suggest="1200x1200"
          data-landscape-min="512x128" 
          data-landscape-ratio="4:1" 
          data-landscape-suggest="1200x300" }
          span.fa-stack.fa-lg
            i.fa.fa-circle-o.fa-stack-2x
            i.fa.fa-question.fa-stack-1x
      ul style="padding: 0"
        = render( \
            'companies/3_promote/ad_image_card',
            { image_index: gads_logos_index_offset(company, 0),
              ad_image: company.adwords_images.square_logos.default.take || { \ 
                id: '',
                type: 'SquareLogo',
                placeholder_image_url: RESPONSIVE_AD_SQUARE_LOGO_PLACEHOLDER,
                default: true \
              },
              is_required: false })
        = render( \
            'companies/3_promote/ad_image_card',
            { image_index: gads_logos_index_offset(company, 1),
              ad_image: company.adwords_images.landscape_logos.default.take || { \
                id: '',
                type: 'LandscapeLogo',
                placeholder_image_url: RESPONSIVE_AD_LANDSCAPE_LOGO_PLACEHOLDER,
                default: true  \
              },
              is_required: false })
        br
        - company.ad_images.logos.select { |logo| !logo.default? }.each_with_index do |ad_image, i|
            = render( \
                'companies/3_promote/ad_image_card',
                { image_index: gads_logos_index_offset(company, index + 2),
                  ad_image: ad_image,
                  is_required: false })