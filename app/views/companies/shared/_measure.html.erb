        </div>

        <div class="col-md-9 col-sm-8 layout-main">

          <div id="settings-content" class="tab-content stacked-content">

            <div class="tab-pane fade in active" id="measure-summary-container">
              <%= render 'companies/shared/measure/summary_charts', { company: company } %>
            </div>

            <div class="tab-pane fade" id="measure-stories-container">
              <%= render 'companies/shared/measure/stories_table' %>
            </div>

            <div class="tab-pane fade" id="measure-visitors-container">
              <%= render 'companies/shared/measure/visitors_table', { company: company } %>
            </div>

            <div class="tab-pane fade" id="measure-activity-container">

              <% cache("#{company.subdomain}/recent-activity", skip_digest: true) do %>
                <%= render 'companies/shared/measure/activity_table',
                      { recent_activity: recent_activity,
                        story_views_30_day_count: @story_views_30_day_count } %>
              <% end %>

            </div>

