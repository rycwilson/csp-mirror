<!-- measure -->
<div role='tabpanel' class='tab-pane content' id='measure'>
  <div class='container'>
    <div class='row'>

      <div class='portlet portlet-default'>

        <div class="portlet-header">
          <h4 class="portlet-title">
            <u>Story Visitors</u>
          </h4>
        </div>

        <div class='portlet-body'>

          <table class="table table-striped table-bordered">
            <thead>

              <tr>
                <th>Customer</th>
                <th>City</th>
                <th>State</th>
                <th>Visit Date & Time</th>
              </tr>

            </thead>
                      <% @company.visitors.each do |visitor| %>
            <tbody>

              <tr>
                <td><%= visitor.organization %></td>
                <td><%= visitor.city %></td>
                <td><%= visitor.state %></td>
                <td><%= visitor.created_at %></td>
              </tr>

            </tbody>
               <% end %>
          </table>
        </div>

      </div> <!-- portlet -->

      <div class="portlet portlet-boxed">

        <div class="portlet-header">
          <h4 class="portlet-title">
            <u>Donut  Chart</u>
          </h4>
        </div> <!-- /.portlet-header -->

        <div class="portlet-body">
          <div id="donut-chart" class="chart-holder"></div>

        </div> <!-- /.portlet-body -->


        <div id="flot-placeholder" style="width:300px; height: 200px"></div>

      </div> <!-- /.portlet -->

      <div class='portlet portlet-default'>
        <div class="portlet-body">

          <table
              class="table table-striped table-bordered table-hover ui-datatable"
              data-ajax="../../global/js/demos/json/table_data.json"
              data-global-search="true"
              data-length-change="true"
              data-info="true"
              data-paging="true"
              data-page-length="10">

            <thead>
              <tr>
                <th data-filterable="text">Name</th>
                <th data-filterable="select" data-sortable="true" data-sort-order="2">Position</th>
                <th data-filterable="select" data-sortable="true" data-sort-order="2">Office</th>
                <th>Extn</th>
                <th data-sortable="true">Start Date</th>
                <th data-sortable="true" data-sort-order="1" data-direction="desc">Salary</th>
              </tr>
            </thead>

            <tbody>
            </tbody>

            <tfoot>
              <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Extn</th>
                <th>Start Date</th>
                <th>Salary</th>
              </tr>
            </tfoot>

          </table>
        </div>
      </div> <!-- portlet -->

    </div>  <!-- row -->
  </div>  <!-- container -->
</div>  <!-- measure -->

<script type="text/javascript">
$(function() {
    var d1 = [];
    for (var i = 0; i < 14; i += 0.5) {
        d1.push([i, Math.sin(i)]);
    }
    var d2 = [[0, 3], [4, 8], [8, 5], [9, 13]];
    // A null signifies separate line segments
    var d3 = [[0, 12], [7, 12], null, [7, 2.5], [12, 2.5]];
    $.plot("#flot-placeholder", [ d1, d2, d3 ]);
});
</script>