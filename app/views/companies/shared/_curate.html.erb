<%= render 'companies/shared/new_story_modal' %>
<!-- curate -->
<div id='curate' class="<%= @mainnav_tab == 'curate' ? 'active tab-pane content' : 'tab-pane content' %>" role='tabpanel' style='margin-top:-10px'>
  <div class='container'>

    <div class="col-sm-2">
      <!-- new story modal -->
      <button type="button" class="btn btn-primary" style='width:100%'
          data-toggle="modal" data-target="#new-story-modal">
        New story
      </button> <br><br>

      <%= link_to 'Gallery View', stories_path,
            { class: 'btn btn-default', style: 'width:100%' } %>
    </div>

    <div class='col-sm-10'>
      <div class='portlet portlet-default'>
        <div class='portlet-body'>
          <div class='table-responsive'>

            <table class="table table-striped table-bordered thumbnail-table">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Title</th>
                  <th>Status</th>
                  <th>Publish Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>

                <% @company.stories.each do |story| %>

                  <tr>
                    <td class='valign-middle'>
                      <%= story.success.customer.name %>
                    </td>
                    <td class='valign-middle'>
                      <%= story.title %>
                    </td>
                    <% if story.published? %>
                      <td class='valign-middle'>
                        <%= link_to 'Published', story_path(story) %>
                      </td>
                      <td class='valign-middle'>
                        <%= story.publish_date.strftime('%m/%d/%Y') %>
                      </td>
                    <% else %>
                      <td class='valign-middle'>
                        <%= link_to 'Pending curation', story_path(story) %>
                      </td>
                      <td class='valign-middle'>
                        N/A
                      </td>
                    <% end %>
                    <td class="text-center class='valign-middle'">
                      <%= link_to edit_story_path(story),
                          class: "btn btn-xs btn-primary" do %>
                        <i class="fa fa-pencil"></i>
                      <% end %>
                      <%= link_to story_path(story),
                          method: 'delete',
                          data: { confirm: 'Are you sure?' },
                          class: 'btn btn-xs btn-secondary' do %>
                        <i class="fa fa-times"></i>
                      <% end %>
                    </td>
                  </tr>

                <% end %>

              </tbody>
            </table>
          </div>  <!-- table-responsive -->
        </div>  <!-- portlet-body -->
      </div>  <!-- portlet -->
    </div>  <!-- row -->
  </div>  <!-- container -->
</div>  <!-- curate -->

