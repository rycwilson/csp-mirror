<%= render 'companies/shared/new_story_modal' %>
<!-- curate -->
<div id='curate' class="<%= @mainnav_tab == 'curate' ? 'active tab-pane content' : 'tab-pane content' %>" role='tabpanel' style='margin-top:-10px'>
  <div class='container'>

    <div class="row curate-nav">
      <div class="col-xs-4 col-sm-3 col-md-2">
        <!-- new story modal -->
        <button type="button" class="btn btn-default" style='width:100%'
            data-toggle="modal" data-target="#new-story-modal">
          New story
        </button>
      </div>
      <div class="col-xs-4 col-sm-3 col-md-2">
        <%= link_to 'Gallery View', stories_path,
              { class: 'btn btn-default', style: 'width:100%' } %>
      </div>
    </div>

    <div class='col-sm-12'>
      <div class='portlet portlet-default'>
        <div class='portlet-body'>
          <div class='table-responsive'>

            <table id='curate-table' class="table table-striped table-bordered thumbnail-table">
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Curator</th>
                  <th>Title</th>
                  <th>Status</th>
                  <th>Publish Date</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
    <!-- <tbody> -->
      <% @company.stories.order(updated_at: :desc).each do |story| %>

        <tr>
          <td class='td-story-customer valign-middle'>
            <%= story.success.customer.name %>
          </td>
          <td class='td-story-curator valign-middle'>
            <%= story.success.curator.full_name %>
          </td>
          <td class='td-story-title valign-middle'>
            <%= story.title %>
          </td>
          <% if story.published? %>
            <td class='td-story-status valign-middle'>
              <%= link_to 'Published', story.csp_story_path %>
            </td>
            <td class='td-story-date valign-middle'>
              <%= story.publish_date.strftime('%-m/%-d/%y') %>
            </td>
          <% elsif story.logo_published? %>
            <td class='td-story-status valign-middle'>
              <%= link_to 'Logo published', story.csp_story_path %>
            </td>
            <td class='td-story-date valign-middle'>
              <%= story.logo_publish_date.strftime('%-m/%-d/%y') %>
            </td>
          <% else %>
            <td class='td-story-status valign-middle'>
              <%= link_to 'Pending curation', story.csp_story_path %>
            </td>
            <td class='valign-middle'>
              N/A
            </td>
          <% end %>
          <td class="td-story-actions text-center valign-middle">
            <%= link_to edit_story_path(story.id),
                class: "btn btn-xs btn-primary" do %>
              <i class="fa fa-pencil"></i>
            <% end %>
            <%= link_to story_path(story.id),
                method: 'delete',
                data: { confirm: 'Are you sure?' },
                class: 'btn btn-xs btn-secondary' do %>
              <i class="fa fa-times"></i>
            <% end %>
          </td>
        </tr>

      <% end %>
    <!-- </tbody> -->

              </tbody>
            </table>
          </div>  <!-- table-responsive -->
        </div>  <!-- portlet-body -->
      </div>  <!-- portlet -->
    </div>  <!-- row -->
  </div>  <!-- container -->
</div>  <!-- curate -->

