
<%= form_tag charts_path,
      { method: :get, remote: true, class: 'form-horizontal' } do %>

  <div class="form-group">
    <%= label_tag 'charts[story_id]', 'Story', class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= select_tag 'charts[story_id]', options_for_select(story_select_options),
          { id: 'charts-story', class: 'form-control',
            style: 'width:60%' } %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'charts[date_range]', 'Date(s)', class: 'col-sm-2 control-label' %>
    <div class='col-sm-10'>
      <%= text_field_tag 'charts[date_range]', nil, class: 'daterange form-control',
            style: 'width: 60%' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag 'Generate charts', class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>

<div class="row">

  <div class="col-sm-6">
    <div id='visitors-bar-graph' style='max-width:100%'></div>
  </div>

  <div class="col-sm-6">
    <div id='referrer-type-pie-chart' style='max-width:100%'></div>
  </div>

</div>
