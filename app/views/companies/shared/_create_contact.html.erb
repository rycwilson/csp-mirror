
 <div class="<%= form %> create-contact create-<%= contact_type %> hidden">

  <%= contribution_form.fields_for(
        contact_type,
        contact_type == 'referrer' ? contribution_form.object.build_referrer : contribution_form.object.build_contributor
      ) do |contact_form| %>

    <%= contact_form.hidden_field(:sign_up_code, value: 'csp_beta', disabled: true) %>
    <%= contact_form.hidden_field(:password, disabled: true) %>

    <div class="form-group contact-first-name required-input">

      <%= label_tag(:first_name, 'First Name', class: 'col-sm-3 control-label') %>
      <div class="col-sm-9">

        <!-- tabindex: '-1' allows manual focus -->
        <%= contact_form.text_field(
              :first_name, class: "form-control", disabled: true, tabindex: "-1"
            ) %>
        <span class="help-block">Required</span>

      </div>

    </div>

    <div class="form-group contact-last-name required-input">

      <%= label_tag(:last_name, 'Last Name', class: 'col-sm-3 control-label') %>
      <div class="col-sm-9">

        <%= contact_form.text_field(:last_name, class: 'form-control', disabled: true) %>
        <span class="help-block">Required</span>

      </div>

    </div>

    <div class="form-group contact-email required-input">

      <%= label_tag(:email, 'Email', class: 'col-sm-3 control-label') %>
      <div class="col-sm-9">

        <%= contact_form.email_field(:email, class: 'form-control', disabled: true) %>
        <span class="help-block"></span>

      </div>

    </div>

  <% end %>

</div>