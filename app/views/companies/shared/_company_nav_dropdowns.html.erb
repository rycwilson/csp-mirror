
<!-- locals: { company: @company } -->

<ul id='dropdowns-list' class='nav nav-tabs mainnav-menu' role='tablist'
    style='border-bottom:0'>

  <% if company_curator? company.id %>

    <li class="dropdown company-settings pull-right">

      <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
        <span class="visible-xs-inline" style="display: inline !important">
          <i class='glyphicon glyphicon-cog'></i> &nbsp;
        </span>
        <i class="fa fa-caret-down"></i>
      </a>

      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to company_settings_path do %>
            Company Settings
          <% end %>
        </li>
      </ul>

    </li>

  <% end %>

  <li class="dropdown user-profile pull-right">

    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
      <span class="visible-xs-inline" style="display: inline !important">
        <i class='glyphicon glyphicon-user'></i> &nbsp;
      </span>
      <i class="fa fa-caret-down"></i>
    </a>

    <ul class="dropdown-menu" role="menu">

      <% if company_curator? company.id %>
        <li>
          <%= link_to edit_profile_path do %>
            <%= current_user.full_name %>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to edit_profile_no_company_path do %>
            <%= current_user.full_name %>
          <% end %>
        </li>
      <% end %>
      <li>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
      </li>

    </ul>
  </li>
</ul>