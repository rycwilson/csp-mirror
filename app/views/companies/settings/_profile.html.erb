
<%= form_for(@company, @profile_form_options) do |f| %>

  <div class="row">

    <div class="col-sm-6">

      <div class="form-group required-input">
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control'%>
      </div>

      <div class="form-group required-input">
        <%= f.label :subdomain, class: 'control-label' %>

        <% if @company.persisted? %>
          <%= f.text_field :subdomain, class: 'form-control', disabled: true %>
        <% else %>
          <%= f.text_field :subdomain, class: 'form-control' %>
        <% end %>
      </div>

      <div class="form-group required-input">
        <%= f.label :website, class: 'control-label' %>
        <%= f.text_field :website, class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= f.label :gtm_id, 'Google Tag Manager ID', class: 'control-label' %>
        <%= f.text_field :gtm_id, class: 'form-control' %>
      </div>

    </div>  <!-- col -->

    <div class="col-sm-6">

      <div class="form-group logo-upload">

        <label>Header Logo</label>
        <div class="fileinput <%= @company.logo_url.blank? ? 'fileinput-new' : 'fileinput-exists' %>" data-provides="fileinput">

            <div class="fileinput-new thumbnail"
                 style="<%= @company.new_record? ? Company::CSP.header_style : @company.header_style %>">
              <%= image_tag() "logo-missing.png", alt: 'logo missing' %>
            </div>

            <div class="fileinput-preview fileinput-exists thumbnail"
                 style="<%= @company.new_record? ? Company::CSP.header_style : @company.header_style %>"
                 data-trigger="fileinput">
              <img src="<%= @company.logo_url %>" alt="company logo">
            </div>

            <div>
              <span class="btn btn-default btn-file" style='margin-bottom:7px'>
                <span class="fileinput-new">
                  Select Logo
                </span>
                <span class="fileinput-exists">
                  Change Logo
                </span>
                <%= f.file_field :logo_url %>
              </span>

            <!--   <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">
                Remove
              </a> -->
            </div>

        </div> <!-- /.fileupload -->
      </div>  <!-- form-group -->

      <div class="form-group">
        <div class="row color-picker">
          <div class="col-sm-6">
            <%= f.label :header_color_1, 'Header color - left', class: 'control-label' %>
            <%= f.text_field :header_color_1, class: 'form-control mini-colors' %>
          </div>
          <div class="col-sm-6">
            <%= f.label :header_color_2, 'Header color - right', class: 'control-label' %>
            <%= f.text_field :header_color_2, class: 'form-control mini-colors' %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="row">
          <div class="col-sm-6">
            <%= f.label :header_text_color, 'Header text', class: 'control-label' %>
            <%= f.text_field :header_text_color, class: 'form-control mini-colors' %>
          </div>

          <div class="col-sm-6">
            <label>Try it</label> <br>
            <button type='button' id='test-colors-btn' class='btn btn btn-default'>
              Apply
            </button>
            <button type='button' id='restore-colors-btn' class='btn btn btn-default'>
              Restore
            </button>
          </div>
        </div>
      </div>

    </div>  <!-- col -->
  </div>

  <div class="row">
    <div class="col-sm-12">
      <hr>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 text-right">
      <!-- <div class="form-group"> -->

<!--         <button type="reset" id='profile-form-reset' class="btn btn-default">
          Cancel
        </button> -->
        <button type="submit" class="btn btn-success" form="company-profile-form" style="width:114px">
          <span><%= @company.new_record? ? 'Register' : 'Save changes' %></span>
          <i class='fa fa-spin fa-circle-o-notch' style='display:none'></i>
          <i class='fa fa-check' style='display:none'></i>
        </button>

      <!-- </div> -->
    </div>
  </div>

<% end %>  <!-- form_for -->