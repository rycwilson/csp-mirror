= form_with( \
    model: company,
    local: true,
    html: { \
      id: 'company-tags-form',
      class: 'form-horizontal' }) do |f|

  .form-group
    = f.label(:story_category_ids, 'Category Tags', class: 'col-sm-3 control-label')
    .col-sm-9.col-md-8.col-lg-6
      = f.collection_select( \
          :story_category_ids,
          company.story_categories,
          :id,
          :name,
          {},
          { multiple: true,
            class: 'company-tags form-control',
            style: 'width:100%',
            data: { controller: 'tomselect', tomselect_kind_value: 'storyTag' } })

  .form-group
    = f.label(:product_ids, 'Product Tags', class: 'col-sm-3 control-label')
    .col-sm-9.col-md-8.col-lg-6
      = f.collection_select( \
          :product_ids,
          company.products,
          :id,
          :name,
          {},
          { multiple: true,
            class: 'company-tags form-control',
            style: 'width:100%',
            data: { controller: 'tomselect', tomselect_kind_value: 'storyTag' } })

  .form-group
    .col-sm-12.col-md-offset-3.col-md-8.col-lg-6.text-right
      = f.submit('Save changes', class: 'btn btn-success', style: 'width: 114px')
      /button.btn-btn-success type="submit" form="company-tags-form" style="width: 114px"
        span Save changes
        i.fa.fa-spin.fa-circle-o-notch style="display: none"
        i.fa fa-check style="display: none"