
<div>
  <label>Contributor Questions</label>
 <!--  <span class="add-question fa-stack fa-lg">
    <i class="fa fa-circle fa-stack-2x"></i>
    <i class="fa fa-plus fa-stack-1x fa-inverse"></i>
  </span> -->
</div>

<div style='margin-bottom:10px; margin-left:-15px; margin-right:-15px'>
  <%= select_tag('',
        grouped_options_for_select(
          company.contributor_questions.grouped_select_options(@template)
        ),
        {
          include_blank: true,
          class: 'contributor-questions', style: 'width: 100%'
        }) %>
</div>

<ul class='list-unstyled'>

  <%= f.fields_for(:contributor_questions) do |question_f|  %>

    <%= question_f.hidden_field(:company_id) %>

    <li class="contributor-question">

      <div class="row">

        <div class='col-sm-11'>
          <p><%= question_f.object.question %></p>
        </div>

        <div class="col-sm-1">
          <i class='remove-question fa fa-remove'></i>
          <%= question_f.check_box(:_destroy, { class: 'hidden' }, 'true', 'false') %>
        </div>

      </div>

      <div class="row">
        <div class="col-sm-12 save-or-cancel text-center hidden">
          <span>Save changes to remove Question, or <a class='cancel'>Cancel</a></span>
        </div>
      </div>

    </li>

  <% end %>

</ul>