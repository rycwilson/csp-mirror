
<script type="text/template" id="cta-url-params-template">

  {{ Object.keys(params).forEach(function (key, index) { }}

      <div class="cta-url-params__param {{= isNew ? 'new' : '' }}">

        <div class="cta-url-params__checkbox" style="{{= index === 0 ? 'height: 34px; margin: auto auto 0 auto; position: relative;' : '' }}">
          {{ if (index === 0 && !isNew) { }}
            <div class="btn-group" style="position: absolute; top: -32px;">
              <button type="button" class="dropdown-toggle" style="background: none; border: none; padding: 7px" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li><a href="javascript:;" class="check-all">All</a></li>
                <li><a href="javascript:;" class="check-none">None</a></li>
                <li><a href="javascript:;" class="remove-selected">Remove selected</a></li>
              </ul>
            </div>
          {{ } }}
          <label><input type="checkbox"></label>
        </div>

        <div class="cta-url-params__key">
          {{ if (index === 0 && !isNew) { }}
            <label>Parameter</label>
          {{ } }}
          <input class="form-control" value="{{= key }}">
        </div>

        <div class="cta-url-params__value">
          {{ if (index === 0 && !isNew) { }}
            <label>Value</label>
          {{ } }}
          <div class="input-group">
            <input type="text" class="form-control" value="{{= params[key] }}">
            <div class="input-group-btn">
              <!-- style hack below; issue: https://github.com/twbs/bootstrap-sass/issues/409 -->
              <button style="height: 34px; padding: 5px 12px 7px 12px" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></button>
              <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="#">Separated link</a></li>
              </ul>
            </div>

          </div>
        </div>

      </div>

  {{ }) }}

</script>