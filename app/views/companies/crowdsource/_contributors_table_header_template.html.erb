
<script id='contributors-table-header-template' type='text/template'>

  <div class='row contributors-header'>

    <div class='col-sm-6'>
      <button type='button' style='margin:0 10px;height:32px' class='btn btn-secondary btn-sm' data-toggle='modal' data-target='#new-contributor-modal'><i class='glyphicon glyphicon-plus-sign' style='font-size:15px;top:2px'></i>&nbsp;&nbsp;&nbsp;Add New Contributor&nbsp;</button>
      <button type='button' style='margin:0 10px;height:32px' class='btn btn-secondary btn-sm'><i class='glyphicon glyphicon-import' style='font-size:15px;top:2px'></i>&nbsp&nbsp;&nbsp;Import Contributors&nbsp;</button>
    </div>

    <div class='col-sm-6 text-right'>
      <label>Curator&nbsp;</label>
      <select class='crowdsource curator-select form-control text-left' style="width:{{= selectWidth.toString() + 'px' }};">

        <option value='0' selected>All Curators<option>

        {{ _.each(curators, function (curator) { }}

          <option data-column='curator' value="{{= curator.id }}">{{= curator.first_name + ' ' + curator.last_name }}</option>

        {{ }); }}

      </select>
    </div>

  </div>

  <div class='row contributors-header'>

    <div class='col-sm-6'>

      <label style='padding-left:10px;margin:0' for="toggle-group-by-customer">
        <input type="checkbox" id="toggle-group-by-customer" checked>
        <span>&nbsp;&nbsp;Group by Customer&nbsp;&nbsp;&#8211;&nbsp;&nbsp;Story Candidate</span>
      </label>

    </div>

    <div class='col-sm-6 text-right'>

      <label>Filter&nbsp;</label>
      <select id='contributors-filter' class='dt-filter form-control text-left' style="width:{{= selectWidth.toString() + 'px' }};">

        <option value='0' data-column='contributor' selected>All Contributors</option>

        <optgroup label='Contributor'>
          {{ _.each(contributors, function (contributor) { }}

            <option value="contributor-{{= contributor.id }}" data-column='contributor'>{{= contributor.full_name }}</option>

          {{ }) }}
        </optgroup>

        <optgroup label='Next step'>
          <option value='' data-column='email_template'>Next Step 1</option>
          <option value='' data-column='email_template'>Next Step 2</option>
        </optgroup>

        <optgroup label='Customer'>
          {{ _.each(customers, function (customer) { }}

            <option value="customer-{{= customer.id }}" data-column='customer'>{{= customer.name }}</option>

          {{ }); }}
        </optgroup>

        <optgroup label='Story Candidate'>
          {{ _.each(successes, function (success) { }}

            <option value="success-{{= success.id }}" data-column='success'>{{= success.name }}</option>

          {{ }); }}
        </optgroup>

      </select>

    </div>

  </div>

</script>


