
<script id='successes-table-header-template' type='text/template'>

  <div class='row successes-header'>

    <div class='col-sm-6'>
      <button type='button' style='margin:0 10px;height:32px' class='btn btn-secondary btn-sm' data-toggle='modal' data-target='#new-success-modal'><i class='glyphicon glyphicon-plus-sign' style='font-size:15px;top:2px'></i>&nbsp;&nbsp;&nbsp;New Candidate&nbsp;</button>
      <button type='button' style='margin:0 10px;height:32px' class='btn btn-secondary btn-sm'><i class='glyphicon glyphicon-import' style='font-size:15px;top:2px'></i>&nbsp&nbsp;&nbsp;Import Candidates&nbsp;</button>
    </div>

    <div class='col-sm-6 text-right'>
      <label>Curator&nbsp;</label>
      <select class='crowdsource curator-select form-control text-left' style="width:{{= selectWidth.toString() + 'px' }};">

        <option value='0' selected>All Curators<option>

        {{ _.each(curators, function (curator, index) { }}

          <option value="{{= curator.id }}">{{= curator.first_name + ' ' + curator.last_name }}</option>

        {{ }); }}

      </select>
    </div>

  </div>

  <div class='row successes-header'>

    <div class='col-sm-6'>

      <label style='padding-left:10px;margin:0' for="toggle-group-by-customer">
        <input type="checkbox" id="toggle-group-by-customer" checked>
        <span>&nbsp;&nbsp;Group by Customer</span>
      </label>

    </div>

    <div class='col-sm-6 text-right'>

      <label>Filter&nbsp;</label>
      <select id='successes-filter' class='dt-filter form-control text-left' style="width:{{= selectWidth.toString() + 'px' }};">

        <option value='0' selected>All Candidates</option>

        <optgroup label='Next step'>
          <option value=''>Next Step 1</option>
          <option value=''>Next Step 2</option>
        </optgroup>

        <optgroup label='Customer'>

          {{ _.each(customers, function (customer) { }}

            <option value="c{{= customer.id }}" data-col="{{= customerCol }}">{{= customer.name || "no customer name" }}</option>

          {{ }); }}

        <optgroup>

        <optgroup label='Story Candidate'>

          {{ _.each(successes, function (success) { }}

            <option value="s{{= success.id }}" data-col="{{= successCol }}">{{= success.name || "no success name" }}</option>

          {{ }); }}

        <optgroup>

      </select>

    </div>

  </div>

</script>


