
<div id='crowdsource' role='tabpanel'
    class="<%= @workflow_stage == 'crowdsource' ? 'active tab-pane fade in' : 'tab-pane fade' %>">

  <div class="content clip">
    <div class='container'>

      <div class="layout layout-main-right layout-stack-sm">
        <div class="col-md-3 col-sm-4 layout-sidebar">

          <div class="nav-layout-sidebar-skip">
            <strong>Tab Navigation</strong> / <a href="#settings-content">Skip to Content</a>
          </div>

          <ul class="nav nav-layout-sidebar nav-stacked">

            <li class="<%= workflow_substage == 'successes' ? 'active' : (workflow_substage.nil? ? 'active' : '')  %>">
              <a href="#successes-tab-pane" data-toggle="tab">
                <i class="fa fa-rocket"></i>
                &nbsp;&nbsp;Story Candidates
              </a>
            </li>

            <li class="<%= workflow_substage == 'contributors' ? 'active' : '' %>">
              <a href="#crowdsource-contributors-tab-pane" data-toggle="tab">
                <i class="fa fa-users"></i>
                &nbsp;&nbsp;Success Contributors
              </a>
            </li>

          </ul>

        </div>

        <div class="col-md-9 col-sm-8 layout-main">

          <div class="tab-content stacked-content">

            <div id='successes-tab-pane'
                 class="tab-pane fade <%= workflow_substage == 'successes' ? 'in active' : (workflow_substage.nil? ? 'in active' : '') %>">
              <%= render 'companies/crowdsource/successes_table',
                          { company: company } %>
            </div>

            <div id='crowdsource-contributors-tab-pane'
                 class="tab-pane fade <%= workflow_substage == 'contributors' ? 'in active' : '' %>">
              <%= render 'companies/crowdsource/contributors_table',
                      { company: company, workflow_stage: 'crowdsource' } %>
            </div>

          </div>

        </div>

      </div>  <!-- .layout -->

    </div>
  </div>

</div>

