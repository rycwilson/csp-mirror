
<div class="modal fade" id="contribution-request-modal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content" >

      <div class="modal-header">
        <h4 class="modal-title">Send Contribution Request</h4>
        <div class="progress hidden">
          <div class="progress-bar progress-bar-info progress-bar-striped active"
                role='progressbar' style='width:100%'
                aria-valuenow='80' aria-valuemin="0" aria-valuemax='100'>
          </div>
        </div>
        <span id='request-recipient'></span>
      </div>

      <div class="modal-body">

        <%= form_tag('', id: 'contribution-request-form',
                      remote: true, method: :put) do  %>

          <%= hidden_field_tag(:send_request, value: true) %>

          <%= text_field_tag('contribution[request_subject]', nil,
                class: 'form-control') %> <br>

          <%= text_area_tag('contribution[request_body]', nil,
              id: 'contribution-request-editor',
              data: { provider: 'summernote' }, class: 'form-control') %>

        <% end %>

      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Cancel
        </button>
        <button type="submit" form='contribution-request-form' class="btn btn-success">
          Send
        </button>
      </div>

    </div>
  </div>
</div>
