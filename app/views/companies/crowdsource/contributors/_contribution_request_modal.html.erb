
<div class="modal fade" id="contribution-request-modal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="send modal-title">Contributor Invitation</h4>
        <h4 class="readonly modal-title">
          <span>Contributor Invitation&nbsp;&nbsp;&#8212;&nbsp;&nbsp;sent </span>
          <span></span>
        </h4>
        <div class="progress hidden">
          <div class="progress-bar progress-bar-info progress-bar-striped active"
                role='progressbar' style='width:100%'
                aria-valuenow='80' aria-valuemin="0" aria-valuemax='100'>
          </div>
        </div>
        <div id='to-contributor' style='visibility:hidden'>
          <span style='font-weight:600;'>To</span>&nbsp;&nbsp;
          <span></span>
        </div>
      </div>

      <div class="modal-body" style='visibility:hidden'>

        <%= form_tag('', id: 'contribution-request-form', remote: true, method: :put) do  %>

          <%= hidden_field_tag(:send_invitation, true) %>

          <div class="form-inline">
            <div class="form-group subject">

              <%= label_tag('contribution_request_subject', 'Subject') %><!--
           --><%= text_field_tag('contribution[request_subject]', nil,
                    class: 'form-control') %>

            </div>
          </div>

          <%= text_area_tag('contribution[request_body]', nil,
              id: 'contribution-request-editor',
              data: { provider: 'summernote' }, class: 'form-control') %>

        <% end %>

      </div>

      <div class="modal-footer" style='visibility:hidden'>
        <button type="button" class="readonly btn btn-default" data-dismiss="modal">
          Close
        </button>
        <button type="button" class="send btn btn-default" data-dismiss="modal">
          Cancel
        </button>
        <button type="submit" form='contribution-request-form' class="send btn btn-success">
          Send Invitation
        </button>
      </div>

    </div>
  </div>
</div>
