
<script type='text/template' id='contributors-dropdown-template'>

  <div style='position:relative'>

    <a href="javascript:;" class="dropdown-toggle" data-toggle='dropdown'>
      <i class='fa fa-caret-down'></i>
    </a>

    <ul class='dropdown-menu'>

      {{ if (status === 'pre_request') { }}

        <li>
          <a href="javascript:;">
            <i class='fa fa-envelope-o action'></i>&nbsp;
            <span>Send Request</span>
          </a>
        </li>

      {{ } else { }}

        <li>
          <a href="javascript:;">
            <i class='fa fa-search action'></i>&nbsp;
            <span>View Sent Request</span>
          </a>
        </li>

      {{ } }}

      {{ if (workflowStage === 'crowdsource') { }}

        <li class='story-candidate'>
          <a href="javascript:;">
            <i class='fa fa-search action'></i>&nbsp;
            <span>View Story{{= story? '' : ' Candidate' }}</span>
          </a>
        </li>

      {{ } }}

      {{ if (status === 'contribution' || status === 'feedback') { }}

        <li>
          <a href="javascript:;">
            <i class='fa fa-check action'></i>&nbsp;
            <span>Mark as Complete</span>
          </a>
        </li>

      {{ } }}

      <li>
        <a href="javascript:;">
          <i class='fa fa-remove action'></i>&nbsp;
          <span>Remove</span>
        </a>
      </li>

    </ul>

  </div>

</script>

