(function () {

  var headerStyle = '<%= @company.header_style %>',
      colorLeft = '<%= @company.header_color_1 %>',
      colorRight = '<%= @company.header_color_2 %>',
      flashMesg = '<%= @flash_mesg %>',
      flashStatus = '<%= @flash_status %>';

  app.company.header_style = headerStyle;

  $('.navbar').attr('style', headerStyle);

  $('.logo-upload .thumbnail')
