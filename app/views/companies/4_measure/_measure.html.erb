
<div id="measure" class="<%= workflow_stage == 'measure' ? 'active tab-pane fade in' : 'tab-pane fade' %>" role='tabpanel'>

  <div class="container">
    <div class="row">

      <div class="col-sm-4 col-lg-3 layout-sidebar">

        <ul class="nav nav-layout-sidebar nav-stacked">

          <li class='active'>
            <a href="#measure-summary-container" data-toggle="tab">
            <i class="fa fa-bar-chart"></i>
            &nbsp;&nbsp;Summary
            </a>
          </li>

          <li>
            <a href="#measure-stories-container" data-toggle="tab">
            <i class="fa fa-newspaper-o"></i>
            &nbsp;&nbsp;Stories
            </a>
          </li>

          <li>
            <a href="#measure-visitors-container" data-toggle="tab">
            <i class="fa fa-users"></i>
            &nbsp;&nbsp;Visitors
            </a>
          </li>

          <li>
            <a href="#measure-activity-container" data-toggle="tab">
            <i class="fa fa-line-chart"></i>
            &nbsp;&nbsp;Recent activity
            </a>
          </li>


        </ul>

      </div>

      <div class="col-sm-8 col-lg-9 layout-main">

        <div id="settings-content" class="tab-content stacked-content">

          <div class="tab-pane fade in active" id="measure-summary-container">
            <%= render 'companies/4_measure/summary_charts', { company: company } %>
          </div>

          <div class="tab-pane fade" id="measure-stories-container">
            <%= render 'companies/4_measure/stories_table' %>
          </div>

          <div class="tab-pane fade" id="measure-visitors-container">
            <%= render 'companies/4_measure/visitors_table', { company: company } %>
          </div>

          <div class="tab-pane fade" id="measure-activity-container">

            <% cache("#{company.subdomain}/recent-activity", skip_digest: true) do %>
              <%= render 'companies/4_measure/activity_table',
                    { recent_activity: recent_activity,
                      story_views_30_day_count: story_views_30_day_count } %>
            <% end %>

          </div>

        <!-- </div> -->

      </div> <!-- /.col -->

    </div>
  </div> <!-- container -->
</div>  <!-- measure -->