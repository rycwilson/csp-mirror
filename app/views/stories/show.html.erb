
<%= javascript_tag do %>

  $(function () {
    var company = <%= raw @company.to_json %>;

    $('.nav-tabs .active').removeClass('active');

    $('a[role=tab]').on('click', function() {
      window.location =
        '/companies/' + company.id + '?mainnav_tab=' + $(this).attr('aria-controls')
    });

  });

<% end %>

<div class='wrapper'>

  <% if user_signed_in? %>
    <%= render 'shared/mainnav' %>
  <% end %>

  <!-- nav links, social sharing  -->
  <div class="mainnav" style="min-height:55px">
    <div class="container">
      <div class='col-sm-3' style='margin-top:1.7%; margin-bottom:1.7%'>

        <% if user_signed_in? && (current_user.company.try(:subdomain) == request.subdomain) %>

          <!-- the data-no-turbolink attribute is necessary for linkedin widgets to properly load -->
          <!-- http://stackoverflow.com/questions/17600093/rails-javascript-not-loading-after-clicking-through-link-to-helper -->
          <div data-no-turbolink>
            <%= link_to edit_story_path(@story.id), class: 'csp-nav' do %>
              <span class='glyphicon glyphicon-chevron-left'
                  style='color:#337ab7; margin-right:5px'>
              </span><span>Edit this Story</span>
            <% end %>
          </div>

        <% elsif !user_signed_in? %>

          <%= link_to root_path, class: 'csp-nav' do %>
            <span class='glyphicon glyphicon-chevron-left'
                style='color:#337ab7; margin-right:5px'>
            </span><span>Back to Stories</span>
          <% end %><br>

        <% end %>

      </div>  <!-- nav links -->

      <div class="col-sm-5 text-center" style='margin-top:1%; margin-bottom:1%'>
        <h2 style='margin-bottom:0'> <%= @story.success.customer.name %></h2>
      </div>

      <div class='col-sm-4 text-right'
          style='margin-top:1%; margin-bottom:1%; padding-right:32px'>
        <%= render 'shared/social_sharing' %>
      </div>

    </div>   <!-- container -->
  </div>  <!-- mainnav -->

  <div class="content">
    <div class="container"
        style="<%= user_signed_in? ? 'margin-top:-10px' : 'margin-top:-10px' %>">

      <!-- logo, quote, video -->
      <div class="row">
        <div class= 'col-sm-3 text-center' style='margin-top:5px'>

          <img src="<%= @story.success.customer.logo_url || asset_path('company-logo-missing.png') %>" style="width:120px">

        </div>  <!-- logo -->

        <!-- quote -->
        <div class= 'col-sm-5 text-justify story-text' style='margin-top:5px'>

          <p class='lead'><em>"<%= @story.quote %>"</em></p> <br>

          <div class='row'>
            <div class='col-sm-11 text-right'>

              <p>- <%= @story.quote_attr %></p>

            </div>
          </div>
        </div>  <!-- quote -->

        <div class= 'col-sm-4 text-center' style='margin-top:5px'>
          <iframe width="320" height="180" src="<%= @story.embed_url %>" frameborder="0" allowfullscreen></iframe>
        </div>
      </div>  <!-- logo, quote, video -->

      <!-- story content, results, contributing team -->
      <div class="row story-text" style='margin-top:20px'>
        <div class='col-sm-8'>  <!-- content -->
          <div class='well' style='padding:40px'>
            <h3 class='text-center'><%= @story.title %></h3><br>

            <p class='text-justify'>
              <strong>Situation: </strong><%= @story.situation %>
            </p> <br>

            <p class='text-justify'>
              <strong>Challenge: </strong><%= @story.challenge %>
            </p> <br>

            <p class='text-justify'><strong>Solution: </strong><%= @story.solution %></p> <br>

            <p class='text-justify'><strong>Benefits: </strong><%= @story.benefits %></p> <br>
          </div>
        </div>  <!-- content -->

        <!-- results and contributing team -->
        <div class='col-sm-4'>
          <div class="well">
            <h3 class='text-center'>Results</h3>

            <% @story.success.results.each do |result| %>
              <div class="row">
                <div class="col-sm-1">
                  <i class="icon-li fa fa-hand-o-right"></i>
                </div>
                <div class="col-sm-10">
                  <p> <%= result.description %></p>
                </div>
              </div>
            <% end %>

          </div> <!--  well -->

          <div class="row text-center">
            <h3 style='margin-top:18px'>Contributing Team</h3>

            <% @contributors.each do |contributor| %>

              <script type="IN/MemberProfile" data-id="<%= contributor.linkedin_url %>" data-format="inline" data-related="true" data-width='340'></script>

            <% end %>

          </div>
        </div>  <!-- results and contributing team -->
      </div>  <!-- story content, results, contributing team -->

    </div>  <!-- container -->
  </div>  <!-- content -->
</div>  <!-- wrapper -->

