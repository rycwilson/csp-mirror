<% if @more_stories.present? && @company.subdomain != 'varmour' %>
  <div id='more-stories-container'>
    <%= render 'widgets/more_stories_tab',
          { widget: @company.widget, stories: @more_stories,
            title: 'More Stories', native: true } %>
  </div>
<% end %>


<% @story.ctas.forms.each do |form| %>
  <%= render 'ctas/cta_form_modal', { form: form } %>
<% end %>


<% if @is_curator %>
  <%#= render 'shared/company_navbar', { company: @company, workflow_tab: nil } %>
<% end %>

<div class="mainnav" style='min-height:42px!important;position:relative'>

  <% if @is_curator %>

    <% cache("#{@company.subdomain}/curator-story-#{@story.id}-header", skip_digest: true) do %>
      <%= render 'stories/shared/story_header', { story: @story, is_curator: true } %>
    <% end %>

  <% else %>

    <% cache("#{@company.subdomain}/public-story-#{@story.id}-header", skip_digest: true) do %>
      <%= render 'stories/shared/story_header', { story: @story, is_curator: false } %>
    <% end %>

  <% end %>

</div>

<div class="story-wrapper hidden">

  <!-- includes video -->
  <div id='story-section-testimonial' class="<%= @story.video_url.present? ? '' : 'no-video' %>">

    <% cache("#{@company.subdomain}/story-#{@story.id}-testimonial",
             skip_digest: true) do %>
      <%= render 'stories/shared/story_testimonial',
            { story: @story, include_video: @story.video_url.present? } %>
    <% end %>

  </div>

  <!-- video (xs only) -->
  <div id='story-section-video-xs'
       class="visible-xs-block <%= @story.video_url.present? ? '' : 'hidden' %>">

    <% cache("#{@company.subdomain}/story-#{@story.id}-video-xs",
             skip_digest: true) do %>
      <%= render 'stories/shared/story_video_xs',
            { story: @story, include_video: @story.video_url.present? } %>
    <% end %>

  </div>

  <div id='social-buttons-xs' class="visible-xs-block text-right">

    <% cache("story-social-buttons-xs", skip_digest: true) do %>
      <%= render 'stories/shared/social_buttons_xs', { story: @story } %>
    <% end %>

  </div>

  <!-- story content, results, contributing team -->
  <div id='story-section-content'>

    <%= render 'stories/shared/story_content',
        { company: @company, story: @story, contributors: @contributors } %>

  </div>

  <% unless user_signed_in? %>
    <div class='hidden-xs' style='border:1px solid #e3e3e3;z-index:1000'>
      <div class='container' style='padding:0 0 15px 0' id='story-footer'>

        <div class="row" style="display:flex;align-items:center;font-size:0;height:100px">
          <div class="col-sm-6">
            <a href="<%= csp_landing %>">
              <img src="<%= CS_POWERED_LOGO_URL %>" alt="Powered by Customer Stories">
            </a>
          </div>
          <div class="col-sm-6 text-right">
            <h5 style='margin:0'>
              <%= @company.name %> Curators <%= link_to 'Login', new_user_session_path %>
            </h5>
          </div>
        </div>

      </div>
    </div>
  <% end %>

</div>  <!-- story wrapper -->



