<div class='container'>

  <!-- nav links, social sharing  -->
  <div class="row">
    <div class='col-md-2'>

      <% if user_signed_in? %>

        <%= link_to company_path(current_user.company), class: 'story-nav' do %>
          <span class='glyphicon glyphicon-chevron-left'
              style='color:#337ab7; margin-top:17px; margin-right:5px'>
          </span><span>Curate Stories</span>
        <% end %><br>

        <%= link_to edit_story_path(@story), class: 'story-nav' do %>
          <span class='glyphicon glyphicon-chevron-left'
              style='color:#337ab7; margin-top:5px; margin-right:5px'>
          </span><span>Edit this Story</span>
        <% end %>

      <% end %>

    </div>  <!-- nav links -->

    <div class='col-md-10 text-right' style='margin-top:18px; padding-right:40px'>

      <%= render 'shared/social_sharing' %>

    </div>
  </div>  <!-- nav links, social sharing -->

  <hr style='margin-top:15px'>

  <!-- logo, quote, video -->
  <div class="row">
    <div class= 'col-md-3 text-center' style='margin-top:5px'>

      <img src="https://logo.clearbit.com/<%= @story.success.customer.name.downcase %>.com"
          style="height:120px; width:120px">  <!-- logo -->

    </div>  <!-- logo -->

    <div class= 'col-md-5' style='margin-top:5px'>  <!-- quote -->

      <p class='lead'><em>"<%= @story.quote %>"</em></p> <br>

      <div class='row'>
        <div class='col-md-11 text-right'>

          <p>- <%= @story.quote_attr %></p>

        </div>
      </div>
    </div>  <!-- quote -->

    <div class= 'col-md-4 text-center' style='margin-top:5px'>
      <iframe width="320" height="180" src="<%= @story.embed_url %>" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>  <!-- logo, quote, video -->

  <!-- story content, results, contributing team -->
  <div class="row" style='margin-top:20px'>
    <div class='col-sm-8'>  <!-- content -->
      <div class='well'>

        <h3 class='text-center'><%= @story.title %></h3><br>

        <p><strong>Situation: </strong><%= @story.situation %></p><br>

        <p><strong>Challenge: </strong><%= @story.challenge %></p><br>

        <p><strong>Solution: </strong><%= @story.solution %></p><br>

        <p><strong>Benefits: </strong><%= @story.benefits %></p><br>

      </div>
    </div>  <!-- content -->

    <!-- results and contributing team -->
    <div class='col-sm-4'>
      <div class="well">
        <h3 class='text-center'>Results</h3>

        <% @story.success.results.each do |result| %>
          <div class="row">
            <div class="col-sm-1">
              <i class="icon-li fa fa-hand-o-right"></i>
            </div>
            <div class="col-sm-10">
              <p> <%= result.description %></p>
            </div>
          </div>
        <% end %>

      </div> <!--  well -->

      <div class="row text-center">
        <h3 style='margin-top:18px'>Contributing Team</h3>

        <% @contributors.each do |contributor| %>

          <script type="IN/MemberProfile" data-id="<%= contributor.linkedin_url %>" data-format="inline" data-related="true" data-width='340'></script>

        <% end %>
      </div>
    </div>  <!-- results and contributing team -->
  </div>  <!-- story content, results, contributing team -->

</div>

