
<% cache "#{company.subdomain}/curator-story-tile-#{story.id}-\
          memcache-iterator-#{company.story_tile_fragments_memcache_iterator}" do %>

  <a href="<%= story.published ? story.csp_story_path : edit_story_path(story.id) %>">

    <div class="grid-item thumbnail">

      <img src="<%= customer.logo_url || image_path('company-logo-missing.png') %>">

      <div class="caption"
           style="background-color:<%= story.published ? company.nav_color_1 : '#f5f5f5' %>;color:<%= story.published ? company.nav_text_color : '' %>">
        <%= story.published ? 'Read story' : (story.logo_published ? 'Logo published' : 'Pending curation') %>
      </div>

    </div>

  </a>

<% end %>