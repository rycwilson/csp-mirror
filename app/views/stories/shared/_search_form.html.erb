
<%= form_tag(
      search_stories_path, 
      { 
        method: 'GET', 
        remote: true, 
        class: "search-stories", 
      }
    ) do %>

  <%= hidden_field_tag(:search, '') %>

  <div class="input-group">
    <%= text_field_tag(
          nil, 
          nil, 
          { 
            type: 'search',
            class: 'search-stories__input form-control', 
            placeholder: 'Search'
          }
        ) %>
    <i class="fa fa-remove fa-fw search-stories__clear"></i>
    <span class="input-group-btn">
      <button class="btn btn-default form-control" type="submit">
        <i class="fa fa-search fa-fw"></i>
      </button>
    </span>
  </div>
  <div class="text-right">
    <span class="search-stories__results help-block"></span>
  </div>

<% end %>

<% if include_category_filter?(company) && include_product_filter?(company) %>

  <hr class="visible-md-block visible-lg-block">

<% end %>