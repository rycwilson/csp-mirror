
  <script type="text/template" id="stories-template">

    {{ stories.forEach(function (story) { }}

      <a href="{{= (story.published && story.csp_story_path) || (isCurator && '/stories/' + story.id + '/edit') || 'javascript:;' }}"
         class="grid-item thumbnail {{= isCurator ? 'curator' : 'public' }} {{= story.published ? 'published' : (story.logo_published ? 'logo-published' : 'pending-curation') }}"
         style="{{= !isCurator && !story.published ? 'pointer-events:none' : '' }}">

        <div class="thumbnail-view">
          <p class='thumbnail-view-hover'>{{= story.title }}</p>
          {{ if (story.success.customer.logo_url) { }}
            <img src="{{= story.success.customer.logo_url }}">
          {{ } else { }}
            <img src="<%= asset_path('company-logo-missing.png') %>">
          {{ } }}
        </div>

        {{ if (story.published || isCurator) { }}

          <div class="caption"
            style="{{= (story.published || story.logo_published) ? 'background-color:' + '<%= company.header_color_1 %>' + ';color:' + '<%= company.header_text_color %>' : '' }}">
            {{= story.published ? 'Read story' : (story.logo_published ? 'Logo published' : 'Pending curation') }}
          </div>

        {{ } }}

      </a>

    {{ }); }}

  </script>