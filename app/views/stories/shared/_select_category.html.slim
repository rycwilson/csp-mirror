.stories-filter.form-group
  = label_tag(select_id, 'Category')
  = select_tag( \
      nil,
      options_for_select( \
        company.tag_select_options('category', only_featured: !is_dashboard, with_stories_count: true),
        preselected_id),
      { id: select_id,
        include_blank: true,
        placeholder: 'Select',
        class: 'stories-filter__select stories-filter__select--category',
        data: { \
          controller: 'tomselect',
          tomselect_type_value: 'category',
          stories_target: 'filterSelect' } })