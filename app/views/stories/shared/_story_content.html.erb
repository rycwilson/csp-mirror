
<div class="container">

  <div class='col-sm-6 col-md-7'>

    <div id='story-narration' class='well'>

      <% cache("#{company.subdomain}/story-#{story.id}-narration",
               skip_digest: true) do %>
        <h3><%= story.title %></h3>

        <div class="visible-md-block visible-lg-block">
          <%= simple_format story.content %>
        </div>
        <div class="hidden-md hidden-lg">
          <%= simple_format story.content %>
        </div>
      <% end %>

    </div>


    <div id='story-footer' class='well' style='min-height:50px;padding:0 15px 0 0'>
      <!-- <h3>Related Stories</h3> -->
      <div class="col-xs-12">
        <div class="grid-related">

          <%# @story.related_stories.each do |story| %>

            <%#= render 'stories/shared/public_story_tile',
                        { company: @company, story: story,
                          customer: story.success.customer } %>

          <%# end %>

        </div>
        <h5 class='text-right' style='margin-top:17px'>
          <%= company.name %> team members <%= link_to 'sign in',
                new_user_session_path %>
        </h5>
      </div>
    </div>

  </div>

  <div class='col-sm-6 col-md-5'>

    <% cache("#{company.subdomain}/story-#{story.id}-results",
             skip_digest: true) do %>

      <div id='story-results' class="well">
        <h3 class='text-center'>Results</h3>

        <% story.success.results.each do |result| %>

          <div class="row">
            <div class='col-xs-1'>
              <i class='fa fa-check'></i>
            </div>
            <div class='col-xs-11'>
              <p><%= result.description %></p>
            </div>
          </div>

        <% end %>

      </div>

    <% end %>

    <% if @story.outbound_actions.present? %>

      <div id='learn-more' class='well' style='margin-top:15px!important'>
        <h3 class='text-center'>Learn More</h3>

        <% @story.outbound_actions.each do |action| %>

          <div class="row">
            <div class='col-xs-1'>
              <i class='fa fa-hand-o-right'></i>
            </div>
            <div class='col-xs-11'>

              <p><a href="<%= action.type == 'OutboundLink' ? action.link_url : '' %>"
                    target='_blank'>
                <%= action.type == 'OutboundLink' ? action.link_display_text :
                      action.html_display_text %>
              </a></p>

            </div>
          </div>

        <% end %>

      </div>

    <% end %>

    <% cache("#{company.subdomain}/story-#{story.id}-contributors",
             skip_digest: true) do %>

      <div class="linkedin-widgets text-center">

        <% if contributors.present? %>

          <h3>Contributing Team</h3>

          <% contributors.each do |contributor| %>

            <% cache("#{company.subdomain}/story-#{story.id}-contributor-#{contributor.id}", skip_digest: true) do %>

              <div class="linkedin-widget linkedin-widget-wide">
                <script type="IN/MemberProfile"
                        data-id="<%= contributor.linkedin_url %>"
                        data-format="inline"
                        data-related="true"
                        data-width='420'></script>
              </div>

              <div class="linkedin-widget">
                <script type="IN/MemberProfile"
                        data-id="<%= contributor.linkedin_url %>"
                        data-format="inline"
                        data-related="true"
                        data-width='340'></script>
              </div>

            <% end %>

          <% end %>

        <% end %>
      </div>
    <% end %>
  </div>
</div>