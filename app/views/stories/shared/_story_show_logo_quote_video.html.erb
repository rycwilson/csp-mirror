<!--
  locals: @story
-->

<!-- logo -->
<div class='col-sm-4 col-lg-3 text-center'>
  <img id='story-show-logo-img'
    src="<%= @story.success.customer.logo_url || asset_path('company-logo-missing.png') %>">
</div>

<!-- quote -->
<div class='col-sm-8 col-md-7 col-lg-5 story-text'>
  <p id='story-quote' class='lead story-text'>
    <em>"<%= @story.quote %>"</em>
  </p>
  <div class='row'>
    <div class='col-sm-11 text-right'>
      <p id='story-quote-attr'>
        <em>- <%= @story.quote_attr %></em>
      </p>
    </div>
  </div>
</div>

<!-- video -->
<div class= 'col-lg-4 hidden-xs hidden-sm hidden-md text-center'>
  <div class='embed-responsive embed-responsive-16by9'>
    <iframe class='embed-responsive-item'
        src="<%= @story.embed_url %>" allowfullscreen>
    </iframe>
  </div>
</div>