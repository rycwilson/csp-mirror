
<div id='stories-filters-xs' class="form-horizontal visible-xs-block">

  <% if categories.length > 2 %>  <!-- includes 'All' (hence 2) -->

    <div class='form-group'>
      <%= label_tag :categories, "Category", class: 'col-xs-3 control-label' %>
      <div class='col-xs-6'>
       <%= select_tag :categories, options_for_select(categories, categories_pre_select),
              { class: 'stories-filter form-control' } %>
      </div>
    </div>

  <% end %>

  <% if products.length > 2 %>

    <div class="form-group">
      <%= label_tag :products, "Product", class: 'col-xs-3 control-label' %>
      <div class="col-xs-6">
        <%= select_tag :products, options_for_select(products, products_pre_select),
             { class: 'stories-filter form-control' } %>
      </div>
    </div>

  <% end %>

</div>

<div id="stories-filters"
    class="form-inline hidden-xs <%= company_curator?(company.id) ? 'curator' : 'reader' %>">

  <% if categories.length > 2 %>  <!-- includes 'All' (hence 2) -->

    <div class='form-group'>
      <%= label_tag :categories, "Category" %>&nbsp;
      <%= select_tag :categories, options_for_select(categories, categories_pre_select),
            { class: 'stories-filter form-control' } %>
    </div>&nbsp;&nbsp;&nbsp;&nbsp;

  <% end %>

  <% if products.length > 2 %>

    <div class="form-group">
      <%= label_tag :products, "Product" %>&nbsp;
      <%= select_tag :products, options_for_select(products, products_pre_select),
            { class: 'stories-filter form-control' } %>
    </div>

  <% end %>

</div>


