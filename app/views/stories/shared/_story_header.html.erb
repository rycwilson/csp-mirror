
<div class="container">

  <div id='story-header' class="row">

    <div id='story-customer-name' class="hidden-xs col-sm-9">
      <h3><%= customer.name %></h3>
    </div>

    <div id='story-customer-name-xs' class="col-xs-12 visible-xs-block">
      <h3><%= customer.name %></h3>
    </div>

    <div id='social-buttons' class="col-sm-3 hidden-xs text-center">
      <a class="icon-button linkedin <%= production? ? 'clicky_log' : '' %>" target="_blank"
         href="<%= LINKEDIN_SHARE_URL + story.csp_story_url %>">
        <i class="fa fa-linkedin"></i><span></span>
      </a>
      <a href="<%= TWITTER_SHARE_URL + story.csp_story_url %>"
         class="icon-button twitter <%= production? ? 'clicky_log' : '' %>" target="_blank">
        <i class="fa fa-twitter"></i><span></span>
      </a>
      <a href="<%= FACEBOOK_SHARE_URL + story.csp_story_url %>"
         class="icon-button facebook <%= production? ? 'clicky_log' : '' %>" target="_blank">
        <i class="fa fa-facebook"></i><span></span>
      </a>
    </div>

  </div>

</div>