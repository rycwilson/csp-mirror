<!-- connection -->
<div class="tab-pane fade" id="connection">

  <div class="heading-block">
    <h4>
        Story Connections
    </h4>
  </div> <!-- /.heading-block -->

  <div id='contribution-connections'>

    <% @contributions.select { |c| c.status == 'contribution' }
        .each do |contribution| %>

      <div class="well">

        <div class="row">
          <div class='col-md-12'>
            <%= contribution.user.full_name %> <br>
            <%= contribution.user.email %> <br>
            <%= contribution.role %> <br>
          </div>
        </div> <br>

        <button class='btn btn-sm btn-secondary'>
          Resend Connection Request
        </button>

      </div>  <!-- well -->

    <% end %>

    <script src="//platform.linkedin.com/in.js" type="text/javascript">
    </script>

    <div class='text-center'>
    <script type="IN/MemberProfile"
            data-id="https://www.linkedin.com/in/jeffhaslem"
        data-format="inline" data-related="true" data-width='200'></script>

    <script type="IN/MemberProfile"
            data-id="https://www.linkedin.com/pub/allan-lo/2/80/214"
        data-format="inline" data-related="false" data-width='200'></script>
    </div>

  </div>  <!-- contribution connections -->
</div>  <!-- connection -->