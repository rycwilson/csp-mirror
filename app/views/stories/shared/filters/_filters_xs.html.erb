
<div class="filters-container visible-xs-block" style="max-width: 350px; margin: 0 auto">

  <%= render('stories/shared/filters/search_form', { company: company }) %>

  <form>
    <div class="form-group" style="margin-bottom: 15px;">
      <%= label_tag(:filter_select, "Filters") %>
      <%= select_tag(:filter_select,
            grouped_options_for_select(
              company.stories_filter_public_grouped_options,
              [
                pre_selected_filters['category'].present? ? "c#{pre_selected_filters['category']}" : '',
                pre_selected_filters['product'].present? ? "p#{pre_selected_filters['product']}" : ''
              ].delete_if { |item| item.blank? }
            ),
            {
              include_blank: true,
              id: 'grouped-stories-filter',
              multiple: true,
              class: 'form-control',
              style: 'width: 100%'
            }
          ) %>

    </div>
    <div class="clear-filters" style="text-align: right; margin-bottom: 15px;">
        <a href="javascript:;">Clear search + filters</a>
      </div>
  </form>

</div>