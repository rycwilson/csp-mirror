
<div class="tab-pane fade" id="in-progress">

  <div id='contributions-in-progress'>

    <% if @story.contributions_in_progress.empty? %>
      <p class="lead text-center" style='margin-top:2.8%'>None currently</p>
    <% end %>

    <% @story.contributions_in_progress.each_with_index do |contribution, index| %>

      <%= render 'stories/shared/edit/contribution_card',
            { contribution: contribution, contributor: contribution.contributor,
              type: "in-progress", index: index } %>

    <% end %>

  </div>
</div> <!-- in-progress