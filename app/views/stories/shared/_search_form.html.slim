= form_tag(search_stories_path, { method: 'GET', class: "search-stories" }) do
  / = hidden_field_tag(:search, '')
  .input-group
    = text_field_tag( \
        :q, 
        nil, 
        { type: 'search', class: 'search-stories__input form-control', placeholder: 'Search' }) 
    i.fa.fa-remove.fa-fw.search-stories__clear
    span.input-group-btn
      button.btn.btn-default type="submit"
        i.fa.fa-search.fa-fw
  .text-right
    span.search-stories__results.help-block

- if company.story_categories.featured.present? && company.products.featured.present?
  hr.visible-md-block.visible-lg-block