
<div class="social-buttons text-right">

  <a href="<%= LINKEDIN_SHARE_URL + story.csp_story_url %>" target="_blank"
     class="icon-button linkedin-share <%= company.color_contrast %>">
    <i class="fa fa-linkedin" style="color:<%= company.color_contrast == 'light' ? company.header_color_2 : '#fff' %>"></i>
    <span></span>
  </a>

  <a href="<%= TWITTER_SHARE_URL + story.csp_story_url %>" target="_blank"
     class="icon-button twitter-share <%= company.color_contrast %>">
    <i class="fa fa-twitter" style="color:<%= company.color_contrast == 'light' ? company.header_color_2 : '#fff' %>"></i>
    <span></span>
  </a>

  <a href="<%= FACEBOOK_SHARE_URL + story.csp_story_url %>" target="_blank"
     class="icon-button facebook-share <%= company.color_contrast %>">
    <i class="fa fa-facebook" style="color:<%= company.color_contrast == 'light' ? company.header_color_2 : '#fff' %>"></i>
    <span></span>
  </a>

</div>