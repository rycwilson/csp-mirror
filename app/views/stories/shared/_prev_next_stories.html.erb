
<section class='prev-next' style='font-size:10px;box-sizing:border-box;text-size-adjust:100%'>

  <% cache("#{company.subdomain}/prev_story_#{prev_story.id}",
            skip_digest: true) do %>

    <div class='prev'>
      <a href="<%= prev_story.csp_story_path %>">
        <div class='prev-arrow'>
          <svg xmlns="http://www.w3.org/2000/svg" role="presentation"
               width="15.8" height="30.3" viewBox="0 0 15.8 30.3"
               preserveAspectRatio="xMinYMin meet">
            <path d="M15.4 27l-11.9-11.9 11.9-11.8c.3-.3.4-.6.4-1s-.1-.7-.4-1c-.5-.5-1.4-.5-1.9 0l-13.2 13.2c-.2.1-.3.4-.3.6 0 .2.1.5.3.7l13.1 13.1c.3.3.6.4 1 .4s.7-.1 1-.4c.3-.3.4-.6.4-1s-.2-.7-.4-.9z"></path>
          </svg>
        </div>
        <img style='max-height:80px;max-width:80%;display:block;margin:auto'src="<%= prev_story.success.customer.logo_url %>" alt="">
        <span class='link-text'><%= prev_story.title %></span>
      </a>
    </div>

  <% end %>

  <% cache("#{company.subdomain}/next_story_#{next_story.id}",
            skip_digest: true) do %>

    <div class="next">
      <a href="<%= next_story.csp_story_path %>">
        <div class='next-arrow'>
          <svg xmlns="http://www.w3.org/2000/svg" role="presentation"
               width="15.8" height="30.3" viewBox="0 0 15.8 30.3"
               preserveAspectRatio="xMinYMin meet">
            <path d="M15.4 27l-11.9-11.9 11.9-11.8c.3-.3.4-.6.4-1s-.1-.7-.4-1c-.5-.5-1.4-.5-1.9 0l-13.2 13.2c-.2.1-.3.4-.3.6 0 .2.1.5.3.7l13.1 13.1c.3.3.6.4 1 .4s.7-.1 1-.4c.3-.3.4-.6.4-1s-.2-.7-.4-.9z"></path>
          </svg>
        </div>
        <img style='max-height:80px;max-width:80%;display:block;margin:auto'src="<%= next_story.success.customer.logo_url %>" alt="">
        <span class='link-text'><%= next_story.title %></span>
      </a>
    </div>

  <% end %>

</section>