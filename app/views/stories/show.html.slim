/ turbolinks caching problematic with linkedin widgets
/ - content_for(:head) do
  /meta name="turbolinks-cache-control" content="no-cache"

/ - content_for(:underscore_templates) do
    = render('companies/1_prospect/contributors/csp_linkedin_widget_template')

= render('stories/show/video_modal', { is_plugin: false })

- @story.ctas.forms.each do |form|
  = render('ctas/cta_form_modal', { form: form })

= render( \
    'shared/navbars/stories_header',
    { company: @company,
      action: 'show',
      story: @story,
      is_preview: @is_preview })

= render( \
    'stories/show/story',
    { company: @company,
      story: @story,
      contributors: @contributors,
      related_stories: @related_stories,
      is_plugin: false,
      is_external: false })

/ web form not presently supported for mobile view
- if @company.ctas.try(:primary).present? && @company.ctas.primary.type == 'CTALink'
  .visible-xs-block
    #primary-cta-xs style="#{primary_cta_style(@company, true)}"
      a href="#{@company.ctas.primary.link_url}"
        span
          = @company.ctas.primary.display_text
        span
          i.fa.fa-fw.fa-caret-right
      button type="button" class="remove"
        .fa.fa-fw.fa-remove