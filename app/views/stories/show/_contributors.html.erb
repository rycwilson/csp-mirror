
<section class="story-contributors text-center">

  <div class="hidden-xs <%= is_plugin ? 'cs-well' : 'well' %> contributors">
    <div class="section-title">
      <h4><%= company.subdomain == 'varmour' ? 'Success Team' : 'Story Profiles' %></h4>
    </div>
  </div>

  <div class="visible-xs">
    <div class="section-title">
      <h4><%= company.subdomain == 'varmour' ? 'Success Team' : 'Story Profiles' %></h4>
    </div>
  </div>

  <!-- TODO http://jsfiddle.net/ashkyd/6ut8qf45/ -->
  <% contributors.each do |contributor, index| %>

    <% if is_plugin %>

      <div class="linkedin-widget" data-linkedin-url="<%= contributor.linkedin_url %>" data-width="<%= linkedin_widget_width(window_width) %>">
        <!-- this div helps to manage the overscroll behavior of the overlays' .scroll-wrap -->
        <% if window_width.to_i < 768 %>
          <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; cursor:pointer"></div>
        <% end %>
        <script type="IN/MemberProfile"
                data-id="<%= contributor.linkedin_url %>"
                data-format="inline"
                data-related="false"
                data-width="<%= linkedin_widget_width(window_width) %>"></script>
      </div>

    <% else %>

      <div class="linkedin-widget linkedin-widget-wide" data-linkedin-url="<%= contributor.linkedin_url %>" data-width="420">
        <script type="IN/MemberProfile"
                data-id="<%= contributor.linkedin_url %>"
                data-format="inline"
                data-related="false"
                data-width="420"></script>
      </div>

      <div class="linkedin-widget" data-linkedin-url="<%= contributor.linkedin_url %>" data-width="340">
        <script type="IN/MemberProfile"
                data-id="<%= contributor.linkedin_url %>"
                data-format="inline"
                data-related="false"
                data-width="340"></script>
      </div>

    <% end %>

  <% end %>

</section>