
<section class="story-contributors text-center" style="visibility: hidden">

  <div class="hidden-xs <%= is_widget ? 'cs-well' : 'well' %>">
    <div class="section-title-container">
      <h4>Success Team</h4>
    </div>
  </div>

  <div class="visible-xs">
    <div class="section-title-container">
      <h4>Success Team</h4>
    </div>
  </div>

  <% contributors.each do |contributor, index| %>

    <% if is_widget %>

      <div class="linkedin-widget" data-linkedin-url="<%= contributor.linkedin_url %>">
        <!-- this div helps to manage the overscroll behavior of the overlays' .scroll-wrap -->
        <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: -10"></div>
        <script type="IN/MemberProfile"
                data-id="<%= contributor.linkedin_url %>"
                data-format="inline"
                data-related="false"
                data-width="<%= linkedin_widget_width(window_width) %>"></script>
      </div>

    <% else %>

      <div class="linkedin-widget linkedin-widget-wide" data-linkedin-url="<%= contributor.linkedin_url %>">
        <script type="IN/MemberProfile"
                data-id="<%= contributor.linkedin_url %>"
                data-format="inline"
                data-related="false"
                data-width="420"></script>
      </div>

      <div class="linkedin-widget" data-linkedin-url="<%= contributor.linkedin_url %>">
        <script type="IN/MemberProfile"
                data-id="<%= contributor.linkedin_url %>"
                data-format="inline"
                data-related="false"
                data-width="340"></script>
      </div>

    <% end %>

  <% end %>

</section>