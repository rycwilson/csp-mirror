
<div class="cs-container cs-story-preview">

  <div class="cs-row">
    <div class="col-sm-12">

      <div class="cs-customer-logo text-center">
        <%= image_tag (story.customer.logo_url || LOGO_PLACEHOLDER_URL)  %>
      </div>
    <!--   <div class="customer-name">
        <span><%#= story.customer.name %></span>
      </div> -->

    </div>
  </div>

  <div class="hidden-xs">
    <div class="cs-row">

      <div class="col-sm-6 cs-story-summary">

        <p><%= story.summary.html_safe %></p>

      </div>

      <div class="col-sm-6 cs-customer-quote">

        <blockquote>
          <p><%= story.quote %></p>
          <div class="<%= story.quote_attr_name.blank? ? 'hidden' : '' %>">
            <cite class="text-right">
              <p class="cite-name"><%= story.quote_attr_name %></p>
              <p class="cite-title"><%= story.quote_attr_title %></p>
            </cite>
          </div>
        </blockquote>

      </div>

    </div>
  </div>

  <div class="visible-xs-block">

    <div class="cs-customer-quote">

      <blockquote>
        <p><%= story.quote %></p>
        <div class="<%= story.quote_attr_name.blank? ? 'hidden' : '' %>">
          <cite class="text-right">
            <p class="cite-name"><%= story.quote_attr_name %></p>
            <p class="cite-title"><%= story.quote_attr_title %></p>
          </cite>
        </div>
      </blockquote>

    </div>

    <div class="cs-story-summary">

      <p><%= story.summary.html_safe %></p>

    </div>

  </div>

</div>