
<section class="story-results visible-xs-block">

  <div class="section-title-container">
    <h4 class="text-center">Results</h4>
  </div>

  <div class="ul-container">

    <ul class="fa-ul">

      <% story.results.each do |result| %>

        <li>
          <i class="fa-li fa fa-check"></i>
          <%= result.description %>
        </li>

      <% end %>

    </ul>

  </div>

</section>

<section class="story-results hidden-xs <%= is_widget ? 'cs-well' : 'well' %>">

  <div class="section-title-container">
    <h4 class="text-center">Results</h4>
  </div>

  <% story.results.each do |result| %>

    <div class="<%= is_widget ? 'cs-row' : 'row' %>">
      <div class="col-sm-1">
        <i class="fa fa-check"></i>
      </div>
      <div class="col-sm-11">
        <span><%= result.description %></span>
      </div>
    </div>

  <% end %>

  </ul>

</section>

