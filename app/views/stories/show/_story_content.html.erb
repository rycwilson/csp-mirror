
<div class="container">
  <div class="row">

    <div class='col-sm-6 col-md-7'>

      <div id='story-narration' class='well'>

        <% cache("#{company.subdomain}/story-#{story.id}-narration",
                 skip_digest: true) do %>

          <h4><%= story.title %></h4>

          <div class="visible-md-block visible-lg-block">
            <%= story.content.html_safe %>
          </div>

          <div class="hidden-md hidden-lg">
            <%= story.content.html_safe %>
          </div>

        <% end %>

      </div>


      <% if @related_stories.length >= 2 %>

        <div id='related-stories' class='well hidden-xs'>

          <div class="row">
            <div class="col-sm-12">
              <h4>Related Stories</h4>
              <a href='/'>All Stories</a>
            </div>
          </div>

          <div class="grid-container">
            <ul class="grid list-unstyled text-center">

              <% @related_stories.each do |story| %>
                <%= render(
                      'stories/shared/story_card',
                      {
                        company: @company,
                        story: story,
                        is_curator: false,
                        is_widget: false,
                        is_external: false
                      }
                    ) %>
              <% end %>

            </ul>
          </div>

        </div>

      <% end %>

    </div>

    <div class='col-sm-6 col-md-5'>

      <% cache("#{company.subdomain}/story-#{story.id}-results",
               skip_digest: true) do %>

        <div id='story-results' class="well">
          <h4 class='text-center'>Results</h4>

          <% story.success.results.each do |result| %>

            <div class="row">
              <div class='col-xs-1'>
                <i class='fa fa-check story-icon'></i>
              </div>
              <div class='col-xs-11'>
                <p><%= result.description %></p>
              </div>
            </div>

          <% end %>

        </div>

      <% end %>

      <% if @story.ctas.present? %>

        <%= render 'stories/shared/learn_more', { story: @story } %>

      <% end %>

      <% cache("#{company.subdomain}/story-#{story.id}-contributors",
               skip_digest: true) do %>

        <div class="linkedin-widgets text-center">

          <% if contributors.present? %>

            <h4>Success Team</h4>

            <% contributors.each do |contributor| %>

              <% cache("#{company.subdomain}/story-#{story.id}-contributor-#{contributor.id}", skip_digest: true) do %>

                <div class="linkedin-widget linkedin-widget-wide"
                     data-linkedin-url="<%= contributor.linkedin_url %>">
                  <script type="IN/MemberProfile"
                          data-id="<%= contributor.linkedin_url %>"
                          data-format="inline"
                          data-related="true"
                          data-width='420'></script>
                </div>

                <div class="linkedin-widget"
                     data-linkedin-url="<%= contributor.linkedin_url %>">
                  <script type="IN/MemberProfile"
                          data-id="<%= contributor.linkedin_url %>"
                          data-format="inline"
                          data-related="true"
                          data-width='340'></script>
                </div>

              <% end %>

            <% end %>

          <% end %>
        </div>
      <% end %>

      <% if @related_stories.length >= 2 %>

        <div id='related-stories' class='well visible-xs'>

          <div class="row">
            <div class="col-xs-12">
              <h4>Related Stories</h4>
              <a href='/'>All Stories</a>
            </div>
          </div>

          <div class="grid-container">
            <ul class="grid list-unstyled text-center">

              <% @related_stories.each do |story| %>
                <%= render(
                      'stories/shared/story_card',
                      {
                        company: @company,
                        story: story,
                        is_curator: false,
                        is_widget: false,
                        is_external: false
                      }
                    ) %>
              <% end %>

            </ul>
          </div>

        </div>

      <% end %>

    </div>

  </div>
</div>