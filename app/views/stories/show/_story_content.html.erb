
<div class="<%= is_widget ? 'cs-container' : 'container' %>">

  <div class="<%= is_widget ? 'cs-row' : 'row' %>">

    <div class="col-xs-12 col-sm-6 col-md-7">

      <% cache("#{company.subdomain}/stories/#{story.id}/narration", skip_digest: true) do %>

        <%= render(
              'stories/show/narration',
              { company: company, story: story, is_widget: is_widget }
            ) %>

      <% end %>

      <div class="visible-xs-block">

        <hr>

        <% cache("#{company.subdomain}/stories/#{story.id}/results", skip_digest: true) do %>

          <%= render(
                'stories/show/results',
                { company: company, story: story, is_widget: is_widget }
              ) %>

        <% end %>

        <% if story.ctas.present? %>

          <hr>

          <%= render('stories/show/ctas', { story: story, is_widget: is_widget }) %>

        <% end %>

      </div>

      <% if related_stories.present? && related_stories.length >= 2 %>

        <div class="visible-xs-block"><hr></div>

        <%= render(
              'stories/show/related_stories',
              { company: company, related_stories: related_stories }
            ) %>

      <% end %>

    </div>

    <div class="hidden-xs col-sm-6 col-md-5">

      <% cache("#{company.subdomain}/stories/#{story.id}/results", skip_digest: true) do %>

        <%= render('stories/show/results', { company: company, story: story, is_widget: is_widget }) %>

      <% end %>

      <% if story.ctas.present? %>

        <%= render('stories/show/ctas', { story: story, is_widget: is_widget }) %>

      <% end %>

      <%# cache("#{company.subdomain}/stories/#{story.id}/contributors", skip_digest: true) do %>

        <%= render(
              'stories/show/contributors',
              { contributors: contributors, is_widget: is_widget }
            ) %>

      <%# end %>

    </div>

  </div>
</div>