
(function () {

  var storyId = <%= @story.id %>,
      adwordsConfig = <%= raw @story.adwords_config.to_json(include: { adwords_image: {} }) %>,
      $row = $('tr[data-story-id="' + storyId + '"]'),
      flashMesg = "<%= @flash_mesg %>",
      flashStatus = "<%= @flash_status %>";

  // status updated
  // (all handled by styling)

  // image updated
  $('#image-select-modal').modal('hide')
  if (adwordsConfig.adwords_image && adwordsConfig.adwords_image.image_url) {
    $row.find('.thumbnail img').attr('src', adwordsConfig.adwords_image.image_url)
  }

  flashDisplay(flashMesg, flashStatus);

}());