
<div id="edit-customer-modal" class="modal fade" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <h4 class="modal-title">Customer Info</h4>
      </div>

      <div class="modal-body">
      </div>

      <!-- <div class="modal-footer" style='visibility:hidden'> -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">
          Cancel
        </button>
        <button type="submit" form="edit-customer-form" style="" class="btn btn-success">
          <span>Send</span>
          <i class='fa fa-spin fa-circle-o-notch' style='display:none'></i>
          <i class='fa fa-check' style='display:none'></i>
        </button>
      </div>

    </div>
  </div>
</div>

<!-- modal footer content consists of story form generated on the fly -->
<% content_for :underscore_templates do %>

  <script id="customer-form-template" type="text/template">

    <form id="customer-form" class="form-horizontal" action="/customers/{{= customer.id }}/update" accept-charset="UTF-8" method="PUT" data-remote="true" data-type="json">

      <div class="form-group">
        <label for="customer_name" class="col-sm-2 control-label">Name</label>
        <div class="col-sm-10">
          <input type="text" name="customer[name]" id="customer_name" class="form-control" value="{{= customer.name }}">
        </div>
      </div>

      <div class="form-group">
        <label for="customer_logo_url" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
          <textarea name="customer[description]" class="form-control" style="width:100%" rows="6"></textarea>
        </div>
      </div>


      <div class="form-group">

        <label for="customer_logo_url" class="col-sm-2 control-label">Logo</label>

        <div class="col-sm-10">
          <div class="well fileinput customer-logo {{= customer.logo_url ? 'fileinput-exists' : 'fileinput-new' }}" data-provides="fileinput">

            <label class="checkbox-inline">
              <input name="customer[show_name_with_logo]" type="hidden" value="false">
              <input type="checkbox" value="true" checked="{{= customer.show_name_with_logo ? 'checked' : '' }}" name="customer[show_name_with_logo]">
              Show name with logo
            </label>

            <div class="text-center">

              <div class="fileinput-new thumbnail" data-trigger='fileinput'>
                <img src="<%= LOGO_PLACEHOLDER_URL %>" alt="customer logo placeholder">
              </div>

              <div class="fileinput-preview fileinput-exists thumbnail" data-trigger="fileinput">

                {{ if (customer.logo_url) { }}
                  <img src="{{= customer.logo_url }}" alt="customer logo url">
                {{ } }}
                <!-- setting the line height prevents the jasny bootstrap js from assigning a bogus line height to .customer-name -->
                <div class="customer-name" style="line-height: 18px !important; {{= customer.show_name_with_logo ? '' : 'display: none' }}">
                  <span>{{= customer.name }}</span>
                </div>
              </div>

            </div>

            <div class="btn-file">
              <input type="file" name="customer[logo_url]">
            </div>

            <i class="change-image glyphicon glyphicon-pencil"></i>

          </div>
        </div>

      </div>

    </form>

  </script>

<% end %>







