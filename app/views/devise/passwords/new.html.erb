<!-- NEW password-->

<div id="wrapper">
  <div class="masthead">



  <div class="content">

    <div class="container">

      <hr class="spacer-sm">

      <div class="account-wrapper">

        <div class="account-body">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>



  <div class='form-group'>

  <%= f.email_field :email, { autofocus: true,
  class: 'form-control', id: 'login-username',
  placeholder: 'email', tabindex: '1' } %>
  </div>

  <div class="form-group">
              <%= button_tag(type: 'submit', tabindex: '4',
                  class: "btn btn-primary btn-block btn-lg") do %>
                Send password reset &nbsp; <i class="fa fa-play-circle"></i>
              <% end %>
            </div>


<% end %>


       </div> <!-- /.account-body -->

        <div class="account-footer">
          <p>
          Don't have an account? &nbsp;
          <%= link_to 'Sign up', new_user_registration_path %>
          </p>
          <p>
          Didn't get confirmation? &nbsp;
          <%#= link_to 'Resend email', new_user_confirmation_path %>
          </p>
        </div> <!-- /.account-footer -->

      </div> <!-- /.account-wrapper -->




    </div> <!-- /.container -->
  </div> <!-- /.content -->
 </div> <!-- /.masthead -->
</div> <!-- /#wrapper -->

<%= render 'shared/csp_landing_footer' %>