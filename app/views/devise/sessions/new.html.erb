<!-- NEW session-->
<div id="wrapper">
  <div class="masthead">
    <div class="content">
      <div class="container">
        <!-- <hr class="spacer-sm"> -->
        <div class="account-wrapper">  <!-- style='width:450px' -->
          <div class="row">
            <div class="account-body col-xs-8 col-xs-offset-2">

              <% if request.path == '/users/sign_in' %>

                <h3>Welcome back to Customer Stories</h3>

              <% elsif request.path == '/admins/sign_in' %>

                <h3>CSP Admin</h3>

              <% end %>

              <h5>Please sign in</h5>

              <%= form_for(resource, as: resource_name,
                  url: session_path(resource_name),
                  html: { class: 'form account-form' }) do |f| %>

                <div class='form-group'>
                  <%= f.label :email %><br />
                  <%= f.email_field :email, { autofocus: true,
                    class: 'form-control', id: 'login-username',
                    placeholder: 'email', tabindex: '1' } %>
                </div>

                <div class='form-group'>
                  <%= f.label :password %><br />
                  <%= f.password_field :password, { autocomplete: "off",
                    class: 'form-control', id: 'login-password',
                    placeholder: 'password', tabindex: '2' } %>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group clearfix">
                    <div class='checkbox-inline pull-left'>
                      <%= f.check_box :remember_me, { tabindex: '3' } %>
                      <%= f.label :remember_me %>
                    </div>
                  </div>
                <% end -%>

                <div class="form-group">
                  <%= button_tag(type: 'submit', tabindex: '4',
                      class: "btn btn-primary btn-block btn-lg") do %>
                    Sign in &nbsp; <i class="fa fa-play-circle"></i>
                  <% end %>
                </div>

              <% end %>

            </div> <!-- /.account-body -->
          </div>

          <div class="account-footer">

            <p>
              Forgot password? &nbsp;
              <% if request.path == '/users/sign_in' %>
                <%= link_to 'Reset', new_user_password_path %>
              <% elsif request.path == '/admins/sign_in' %>
                <%= link_to 'Reset', new_admin_password_path %>
              <% end %>
            </p>

            <p>
              Don't have an account? &nbsp;
              <% if request.path == '/users/sign_in' %>
                <%= link_to 'Sign up', new_user_registration_path %>
              <% elsif request.path == '/admins/sign_in' %>
                <%= link_to 'Sign up', new_admin_registration_path %>
              <% end %>
            </p>

            <p>
            <!-- Didn't get confirmation? &nbsp; -->
            <%#= link_to 'Resend email', new_user_confirmation_path %>
            </p>

          </div> <!-- /.account-footer -->

        </div> <!-- /.account-wrapper -->
      </div> <!-- /.container -->
    </div> <!-- /.content -->
  </div> <!-- /.masthead -->
</div> <!-- /#wrapper -->

<%= render 'shared/csp_landing_footer' %>

