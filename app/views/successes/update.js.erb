      winStoryCompleted = !isEditMode;  // submitting from view mode = marking as completed


  // toggle button icons
  $submitBtn.find('i.fa-spin, i.fa-check').toggle();

  setTimeout(function () {
    // re-enable items disabled during form submission
    $('td.toggle-success-child').removeClass('disabled');
    $('button.win-story-actions__edit').prop('disabled', false);
    $form.attr('data-submitted', '');
    if (isEditMode) {
      $submitBtn.find('.fa-check, span.save-changes').toggle();
      $submitBtn.prop('disabled', true);
    } else {
      $submitBtn.find('.fa-check, span.mark-completed').toggle();
      $submitBtn.hide();
    }
  }, 2000)

