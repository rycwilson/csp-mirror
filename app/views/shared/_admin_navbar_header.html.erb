
<% if curator_with_logo? %>

  <%= link_to company.website, class: 'navbar-brand navbar-brand-img', target: '_blank' do %>
    <%= image_tag current_user.company.logo_url, alt: "#{company.name} logo",
          class: 'img-responsive' %>
  <% end %>

<% elsif curator_without_logo? %>

  <%= link_to company.website, class: "navbar-brand navbar-brand-img", target: '_blank' do %>
    <%= image_tag "logo-missing.png",
          alt: "#{company.name} logo placeholder", class: 'img-responsive' %>
  <% end %>

<% elsif registered_user_without_company? %>

  <% if controller_name == 'stories' %>

    <%= link_to root_path, class: 'navbar-brand navbar-brand-img' do %>
      <%= image_tag(company.logo_url, alt: "#{company.name} logo", class: 'img-responsive') unless company.logo_url.blank? %>
    <% end %>

  <% else %>

    <%= link_to root_path, class: 'navbar-brand navbar-brand-img' do %>
      <%= image_tag "mvp-landing/logo_full.png", alt: 'CSP Logo', class: 'img-responsive' %>
    <% end %>

  <% end %>

<% else %>

  <%= link_to company.website, class: "navbar-brand navbar-brand-img company-logo-clicky", target: '_blank' do %>
    <%= image_tag company.logo_url, alt: "#{company.name} logo",
          class: 'img-responsive' %>
  <% end unless company.logo_url.blank? %>

<% end %>

<% if stories? %>

  <span style="<%= header_title(company) %>">Customer Stories</span>

<% end %>







