
<% if user_signed_in? %>

  <!-- if necessary, override the styling to make room for switch_user_select -->
  <%= link_to 'Sign out', destroy_user_session_path,
        method: :delete,
         class: 'btn btn-xs btn-default',
         style: "#{ADMIN_USERS.include?(current_user.email) ? 'margin-top:20px' : ''}" %>

  <%= switch_user_select style: 'width:140px' %>

<% else %>

  <%= link_to 'Sign in', new_user_session_path,
        class: 'btn btn-xs btn-default' %>

<% end %>