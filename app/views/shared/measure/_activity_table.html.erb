
<div id='activity-groups'>
  <table width='100%' class="table table-hover table-striped">

    <thead>
      <tr>
        <th></th>
        <th>Activity type</th>
        <th>7 days</th>
        <th>30 days</th>
      </tr>
    </thead>
    <tbody>
      <!-- this is just filler so the "No data available" message doesn't appear -->
      <!-- <tr class='hidden'><td></td><td></td><td></td></tr> -->

      <% activity.each do |activity_group| %>

        <%= render 'shared/measure/activity_group',
                    { group_type: activity_group.keys[1],
                      group_label: activity_group[:label],
                      group_items: activity_group.values[1] } %>

      <% end %>

    </tbody>
  </table>

</div>