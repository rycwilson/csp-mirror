<ul class="nav navbar-nav navbar-right">

  <!-- display home icon only if account setup (company and user) is complete -->
  <% if current_user.company_id.present? && current_user.linkedin_url.present? %>
    <li class="navbar-profile">
      <%= link_to company_path(current_user.company_id) do %>
        <i class="glyphicon glyphicon-home"></i>
      <% end %>
    </li>
  <% end %>

  <li class="dropdown navbar-profile">

    <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
      <span class="visible-xs-inline" style="display: inline !important">
        <i class='glyphicon glyphicon-user'></i> &nbsp;
      </span>
      <i class="fa fa-caret-down"></i>
      <%#= image_tag 'mvp-global/avatars/avatar-4-sm.jpg',
        { class: 'navbar-profile-avatar', alt: '' } %>
    </a>

    <ul class="dropdown-menu" role="menu">

      <% if current_user.company_id.present? %>
        <li>
          <%= link_to edit_profile_path do %>
            <i class="glyphicon glyphicon-user"></i>
            &nbsp;&nbsp;<%= current_user.full_name %>
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to edit_profile_no_company_path('edit') do %>
            <i class="glyphicon glyphicon-user"></i>
            &nbsp;&nbsp;<%= current_user.full_name %>
          <% end %>
        </li>
      <% end %>

      <li class="divider"></li>

      <li id='logout'>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="glyphicon glyphicon-log-out"></i>
          &nbsp;&nbsp;Sign out
        <% end %>
      </li>

    </ul>

  </li>

  <% if current_user.company_id.present? %>

    <li class="dropdown navbar-profile">

      <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
        <span class="visible-xs-inline" style="display: inline !important">
          <i class='glyphicon glyphicon-cog'></i> &nbsp;
        </span>
        <i class="fa fa-caret-down"></i>
        <%#= image_tag 'mvp-global/avatars/avatar-4-sm.jpg',
          { class: 'navbar-profile-avatar', alt: '' } %>
      </a>

      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to edit_company_path(current_user.company_id) do %>
            <i class="glyphicon glyphicon-cog"></i>
            &nbsp;&nbsp;Company Settings
          <% end %>
        </li>
      </ul>

    </li>

  <% end %>

</ul>