<% if curator_story_view? %>

  <style>.mainnav-main:after { content: none; }</style>

<% end %>

<%= javascript_tag do %>

  $(function () {
    var company = <%= raw @company.to_json %>;

    if (company.feature_flag == 'alpha' || company.feature_flag == 'beta') {
      $(".tooltip-wrapper-tabs").tooltip({ placement: 'right', container: 'body' });
      $(".tooltip-wrapper-promote").tooltip({ placement: 'top' });
    }

  });

<% end %>

<div class='mainnav mainnav-main'
    style="<%= user_signed_in? ? 'margin-bottom:0' : '' %>">
  <div class='container'>

    <!-- only need this if curator signed in ... -->
    <div class="navbar-header">
      <a class="mainnav-toggle"
        data-toggle="collapse" data-target=".mainnav-collapse">
      <span class="sr-only">Toggle navigation</span>
      <i class="fa fa-bars"></i>
    </a>
    </div>

    <div class="collapse mainnav-collapse" role="navigation">

      <%= render 'shared/mainnav_tabs' %>

      <% if gallery_view? %>

        <%= render 'stories/shared/filters' %>

      <% end %>

      <ul class='nav nav-tabs mainnav-menu col-sm-2 pull-right'
          role='tablist' style='border-bottom:0'>

        <% if company_curator? %>

          <li class="dropdown pull-right">

            <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
              <span class="visible-xs-inline" style="display: inline !important">
                <i class='glyphicon glyphicon-cog'></i> &nbsp;
              </span>
              <i class="fa fa-caret-down"></i>
            </a>

            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to edit_company_path(current_user.company_id) do %>
                  Company Settings
                <% end %>
              </li>
            </ul>

          </li>

        <% end %>

        <li class="dropdown pull-right">

          <a class="dropdown-toggle" data-toggle="dropdown" href="javascript:;">
            <span class="visible-xs-inline" style="display: inline !important">
              <i class='glyphicon glyphicon-user'></i> &nbsp;
            </span>
            <i class="fa fa-caret-down"></i>
          </a>

          <ul class="dropdown-menu" role="menu">

            <% if company_curator? %>
              <li>
                <%= link_to edit_profile_path do %>
                  <%= current_user.full_name %>
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to edit_profile_no_company_path do %>
                  <%= current_user.full_name %>
                <% end %>
              </li>
            <% end %>

          </ul>
        </li>
      </ul>

    </div>
  </div>  <!-- container -->
</div>  <!-- mainnav -->