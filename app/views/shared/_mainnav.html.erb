<% if curator_story_view?(@company.id) %>

  <style>.mainnav-main:after { content: none; }</style>

<% end %>

<%= javascript_tag do %>

  $(function () {
    var company = <%= raw @company.to_json %>;

    if (company.feature_flag == 'alpha' || company.feature_flag == 'beta') {
      $(".tooltip-wrapper-tabs").tooltip({ placement: 'right', container: 'body' });
      $(".tooltip-wrapper-promote").tooltip({ placement: 'top' });
    }

  });

<% end %>

<nav class='mainnav mainnav-main' style="margin-bottom:0">
  <div class='container'>

    <div id='mainnav-workflow'
        class="col-xs-8 col-sm-6 col-md-4 <%= gallery_view? ? 'hidden-xs hidden-sm' : '' %>">

      <%= render 'shared/mainnav_workflow_tabs' %>

    </div>

    <div id='collapsed-workflow-tabs'
        class="col-xs-1 <%= gallery_view? ? '' : 'hidden-xs hidden-sm' %> hidden-md hidden-lg ">

      <%= render 'shared/collapsed_workflow_tabs' %>

    </div>

    <% if gallery_view? %>

      <div class="col-xs-8 col-md-6">
        <%= render 'stories/shared/filters',
                      { company: @company,
                        category_select_options: @category_select_options,
                        category_pre_selected_options: @category_pre_selected_options,
                        product_select_options: @product_select_options,
                        product_pre_selected_options: @product_pre_selected_options } %>
      </div>

    <% end %>

    <div class="col-xs-3 col-md-2 pull-right">

      <%= render 'shared/mainnav_account_dropdowns', { company: @company } %>

    </div>

  </div>  <!-- container -->
</nav>  <!-- mainnav -->