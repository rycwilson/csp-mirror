
<% if flash.any? %>

  <%= render 'shared/flash' %>
<!-- This partial will only render if there is something in the flash hash
     In case of AJAX request / JS response, render below -->

<% else %>

  <div class='container' style='z-index:999; position:fixed; width:100%' >
    <div id='flash'
       class="hidden col-md-6 col-md-offset-3 text-center alert"
       role="alert">
      <button type="button" class="close" data-dismiss="alert"
              aria-hidden="true">&times;</button>
    </div>
  </div>

<% end %>

<header class="navbar" role="banner">
  <div class="container">

    <!-- navbar-header -->
    <div class="navbar-header">

      <% if user_signed_in? && current_user.company.try(:logo_url) %>

        <%= link_to root_path do %>
          <%= image_tag "#{current_user.company.logo_url}",
                class: "navbar-brand navbar-brand-img", alt: "company logo" %>
        <% end %>

      <% else %>

        <%= image_tag "mvp-landing/logo_full.png",
            { class: 'navbar-brand navbar-brand-img', alt: 'CSP Logo' } %>

      <% end %>

      <button class="navbar-toggle" type="button"
              data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <i class="glyphicon glyphicon-align-justfy"></i>
      </button>
    </div> <!-- /.navbar-header -->

    <% if user_signed_in? %>

      <nav class="collapse navbar-collapse" role="navigation">

        <% if current_user.company_id.blank? %>
          <%= link_to 'Register your Company', new_company_path,
                class: 'btn btn-info', style: 'margin-top:10px; margin-left:20px' %>
        <% end %>

        <%= render '/shared/mvp_admin_navbar_nav' %>
      </nav>

    <% else %>

      <nav class="collapse navbar-collapse" role="navigation">
        <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-success navbar-right', style: 'margin-top: 10px' %>
      </nav>

    <% end %>

  </div> <!-- /.container -->
</header>