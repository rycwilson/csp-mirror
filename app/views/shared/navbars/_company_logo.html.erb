
<% if registered_user_without_company? %>

  <% if controller_name == 'stories' %>

    <%= link_to(
          root_path, 
          class: 'company-header__logo navbar-brand navbar-brand-img'
        ) do %>

      <% if company.logo_url.present? %>
        <%= image_tag(company.logo_url || LOGO_PLACEHOLDER, class: 'img-responsive', alt: 'company logo') %>
      <% end %>

    <% end %>

  <% else %>

    <%= link_to(root_path, class: 'company-header__logo navbar-brand navbar-brand-img') do %>
      <%= image_tag "landing/logo_full.webp", alt: 'CSP Logo', class: 'img-responsive' %>
    <% end %>

  <% end %>

<% else %>

  <% if company.logo_url.present? || curator?(company) %>

    <%= link_to(
          company.website, 
          class: "company-header__logo company-header__logo--#{company.subdomain} navbar-brand navbar-brand-img #{curator?(company) ? '' : 'company-logo-clicky'}", 
          target: '_blank'
        ) do %>

      <%= image_tag(company.logo_url || LOGO_PLACEHOLDER, class: 'img-responsive', alt: "#{company.name} logo") %>

    <% end %>

  <% end %>

<% end %>







