
<% if registered_user_without_company? %>

  <% if controller_name == 'stories' %>

    <%= link_to(
          root_path, 
          class: 'company-header__logo navbar-brand navbar-brand-img'
        ) do %>

      <%= image_tag(
            company.logo_url || LOGO_PLACEHOLDER_URL, 
            alt: "company logo", 
            class: ' img-responsive'
          ) unless company.logo_url.blank? %>

    <% end %>

  <% else %>

    <%= link_to(root_path, class: 'navbar-brand navbar-brand-img') do %>
      <%= image_tag "mvp-landing/logo_full.png", alt: 'CSP Logo', class: 'img-responsive' %>
    <% end %>

  <% end %>

<% else %>

  <% if company.logo_url.present? || curator?(company) %>

    <%= link_to(
          company.website, 
          class: "company-header__logo company-header__logo--#{company.subdomain} navbar-brand navbar-brand-img #{curator?(company) ? '' : 'company-logo-clicky'}", 
          target: '_blank'
        ) do %>

      <%= image_tag(
            company.logo_url || LOGO_PLACEHOLDER_URL, 
            alt: "#{company.name} logo", 
            class: 'img-responsive' 
          ) %>

    <% end %>

  <% end %>

<% end %>







