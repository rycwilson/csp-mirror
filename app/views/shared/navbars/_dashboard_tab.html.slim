li class="#{'active' if workflow_stage == tab_name}" role="presentation"
  a {
    href="##{tab_name}" 
    data-toggle="tab" 
    data-controller="dashboard-tab"
    data-action="dashboard#onTabClick dashboardTab#onClick"
    data-dashboard-target="#{'tab' if workflow_stage}"
    aria-controls="#{tab_name}"
    role="tab" }
    = tab_name.capitalize
  div